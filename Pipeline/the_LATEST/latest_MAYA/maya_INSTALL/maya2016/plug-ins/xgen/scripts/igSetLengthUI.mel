/** Set the length of the fur in the active igmDescription. */
global proc igSetLengthUI()
{
    if (`window -exists igSetLengthWindow`)
        deleteUI -window  igSetLengthWindow;

    string $value = "1.0";
    string $desc = igCurrentDescription();
    if ( `attributeQuery -ex -node $desc "setLength"` ) {
        $value = `getAttr ($desc+".setLength")`;
    }
    
    window -sizeable false -minimizeButton false -maximizeButton false
	    -menuBar false -width 600 -height 100
	    -title (uiRes("m_igSetLengthUI.kIgroomSetLength")) igSetLengthWindow;

    columnLayout -adj on -rs 10;
    {
        // Create a text field for the filename.
        textFieldGrp -label (uiRes("m_igSetLengthUI.kLength")) -tx $value -cal 1 right -adj 2
            -ann (uiRes("m_igSetLengthUI.kLengthAnnot"))
            igSetLengthField;

        rowLayout -numberOfColumns 3 -columnWidth3 130 130 130
            -columnAlign3 "center" "center" "center"
            -adjustableColumn3 1;
        {
            // Control over the dialog
            text -label "";
            button -label (uiRes("m_igSetLengthUI.kApply")) -w 130
                -ann (uiRes("m_igSetLengthUI.kApplyAnnot"))
                -c "igSetLength";
            button -label (uiRes("m_igSetLengthUI.kCancel")) -w 130 
                -ann (uiRes("m_igSetLengthUI.kCancelAnnot"))
                -c "deleteUI igSetLengthWindow";
            setParent ..;
        }

        setParent ..;
    }

    showWindow igSetLengthWindow;

    // Dont let the window pop-up the wrong size
    window -e -width 600 igSetLengthWindow;
    window -e -height 70 igSetLengthWindow;
}


global proc igSetLength()
{
    global string $igNullDescriptionTag;

    string $desc = igCurrentDescription();
    if ( $desc != $igNullDescriptionTag && $desc != "" ) {
        waitCursor -state on;
        string $length = `textFieldGrp -q -tx igSetLengthField`;

        // Remember what was entered via attributes on the description
        if ( !`attributeQuery -ex -node $desc "setLength"` ) {
            addAttr -ln "setLength" -sn "setLength" -dt "string" $desc;
        }
        setAttr -type "string" ($desc+".setLength") $length;
        
        iGroom -sl $length -d $desc;
        waitCursor -state off;
    }
}
