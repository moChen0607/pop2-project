/**
 * Initialize iGroom for use with or without a UI.
 */
global proc igInitialize()
{
    global string $igNullDescriptionTag = "<NONE>";
    global string $igCurrentDescription = "";
    global string $igBrushList[];

    // Initialize the brushes.
    igBrushUI();

    // Ask the user if they want to also save their iGroom maps when
    // they save their maya file.
    //eval( "muMessageAdd AfterSave igExportCheck" );

    // Source all of the iGroom mel scripts to get any mpxCommands
    // hooked up properly. In general this isnt required, but in order
    // to safely reload a plugin you must either resource or always
    // use eval() when calling an mpxCommand. This is a bit safer.
    python("import xgenm as xgen");
    string $root = python("xgen.rootDir()");
    string $folder = $root+"scripts/";
    string $scripts[] = `getFileList -folder $folder -filespec "*.mel"`;
    for ( $script in $scripts ) {
        if ( $script == "igInitialize.mel" ) continue;
        // ------------------
        // Check to see if its a .res.mel file. If so, do not source it
        // otherwise all strings in mel files will be localized to english
        // last and then stay that way, making it unable to be localized to
        // other languages.
        if ( endsWith($script, ".res.mel") ) continue;
        // -----------------
        if ( catch(`eval( "source "+$script )`) ) {
			string $fmt = (uiRes("m_igInitialize.kNoSource"));
            warning `format -s $script $fmt`;
        }
    }
}


/**
 * Callback to ask user if they would like to export their maps before a
 * maya scene finle change. This gets called before a new scene, before a
 * file open, and after a file save.
 */
global proc igExportCheck( string $args[] )
{
    global string $igNullDescriptionTag;

    string $descs[] = igAllDescriptions();

    if (( size($descs) == 1 ) && ( $descs[0] == $igNullDescriptionTag ))
        return;
    
	string $export = (uiRes("m_igInitialize.kExport")); 
	string $dontExport = (uiRes("m_igInitialize.kDontExport"));
    string $ok = `confirmDialog
        -title (uiRes("m_igInitialize.kWarning"))
        -message (uiRes("m_igInitialize.kExportMsg"))
        -button $export
		-button $dontExport
		-defaultButton $export
        -cancelButton $dontExport
		-dismissString $dontExport`;

    if ( $ok == $export ) {
        igExportMapsUI;
    }
}
