/** Import a mask for iGroom */
global proc igImportMaskUI()
{
    global string $igBasepath;
    string $path = "";
    string $desc = igCurrentDescription();

    // Get the base for the path from the descriptions path. We will always
    // grab the first entry when multiples are present.
    $igBasepath = igOutputDir( $desc );
    
    // Construct the long version of the path for the user. This path
    // is relative to the current working directory.
    $path = $igBasepath + "igroom/mask/";
    
    if (`window -exists igImportMaskWindow`)
        deleteUI -window  igImportMaskWindow;

    window -sizeable false -minimizeButton false -maximizeButton false
	    -menuBar false -width 600 -height 100
	    -title (uiRes("m_igImportMaskUI.kIgroomImportMask")) igImportMaskWindow;

    columnLayout -adj on -rs 10;
    {
        // Create a text field for the filename.
		string $igroomImport = "iGroom Import";
        $browser = "igFileBrowser \"" + $igroomImport + "\" igImportMaskPathField 1";
        textFieldButtonGrp -label (uiRes("m_igImportMaskUI.kMaskPath")) -tx $path
            -bl (uiRes("m_igImportMaskUI.kBrowse")) -bc $browser -cal 1 right -adj 2
            -ann (uiRes("m_igImportMaskUI.kBrowseAnnot"))
            igImportMaskPathField;

        rowLayout -numberOfColumns 3 -columnWidth3 130 130 130
            -columnAlign3 "center" "center" "center"
            -adjustableColumn3 1;
        {
            // Control over the dialog
            text -l "";
            button -label (uiRes("m_igImportMaskUI.kImport")) -w 130
                -ann (uiRes("m_igImportMaskUI.kImportAnnot"))
                -c "igImportMask;deleteUI igImportMaskWindow;";
            button -label (uiRes("m_igImportMaskUI.kCancel")) -w 130 
                -ann (uiRes("m_igImportMaskUI.kCancelAnnot"))
                -c "deleteUI igImportMaskWindow";
            setParent ..;
        }

        setParent ..;
    }

    showWindow igImportMaskWindow;

    // Dont let the window pop-up the wrong size
    window -e -width 600 igImportMaskWindow;
    window -e -height 70 igImportMaskWindow;
}


global proc igImportMask()
{
    global string $igBasepath;
    global string $igNullDescriptionTag;

    string $path = `textFieldButtonGrp -q -tx igImportMaskPathField`;
    
    string $desc = igCurrentDescription();
    if ( $desc != $igNullDescriptionTag && $desc != "" ) {
        waitCursor -state on;
        iGroom -ik $path -d $desc;
        waitCursor -state off;
    }
}
