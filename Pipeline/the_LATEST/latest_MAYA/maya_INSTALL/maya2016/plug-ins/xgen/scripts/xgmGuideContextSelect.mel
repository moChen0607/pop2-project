global proc xgmGuideContextSelect()
{
    $description = python("xgui.currentDescription()");
    if ( !`xgmGuideContext -q -ex xgmGuideContextInstance` ) {
        xgmGuideContext xgmGuideContextInstance;
    }
    setToolTo xgmGuideContextInstance;
}
