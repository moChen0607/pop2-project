global proc xgmPointsContextSelect()
{
    $description = python("xgui.currentDescription()");
    if ( !`xgmPointsContext -q -ex xgmPointsContextInstance` ) {
        xgmPointsContext xgmPointsContextInstance;
    }
    setToolTo xgmPointsContextInstance;
}
