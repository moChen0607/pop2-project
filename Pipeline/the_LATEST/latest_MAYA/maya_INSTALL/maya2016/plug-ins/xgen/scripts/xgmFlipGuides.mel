/**
 * This procedure will take all selected guides and flip them across the
 * x-axis in order to create mirrored guides on the other side.
 */
global proc xgmFlipGuides( string $desc )
{
    if ( $desc == "" ) {
        error (uiRes("m_xgmFlipGuides.kNoDescriptionReceived"));
        return;
    }
    // Get the selected guides
    string $s_guides[] = xgmSelectedGuides("Spline",0);
    // Get the guides in the current description
    string $d_guides[];
    clear $d_guides;
    catchQuiet ($d_guides = python("xg.descriptionGuides(\""+$desc+"\")"));
    // Get the intersection (selected guides from current description)
    string $guides[] = xgmStringArrayIntersect($s_guides,$d_guides);
    select -r $guides;
    
    if ( `objExists "xgmFlipGuides"` ) {
        delete "xgmFlipGuides";
    }
    
    // Create curves in the xgmFlipGuide group
    string $curves[] = xgmCreateCurvesFromGuidesOption(0,0,"xgmFlipGuides");
    select -r $curves;
    // Flip curves to other side
    xform -a -ws -piv 0 0 0;
    scale -r -1 1 1;
    FreezeTransformations;
    // Convert into new guides
    xgmCurveToGuide -d $desc -tsp 1.0 -tsa 1.0;
	delete $curves;
    select -cl;
}
