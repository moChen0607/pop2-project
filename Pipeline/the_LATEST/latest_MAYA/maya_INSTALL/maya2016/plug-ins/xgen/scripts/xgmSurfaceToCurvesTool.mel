global proc xgmSurfaceToCurvesTool(string $parent)
{
    columnLayout -parent $parent -width 340;
    {
        radioButtonGrp -numberOfRadioButtons 4 -label (uiRes("m_xgmSurfaceToCurvesTool.kCurvesStartAt"))
            -ann ((uiRes("m_xgmSurfaceToCurvesTool.kCurvesStartAtAnn")))
            -labelArray4 (uiRes("m_xgmSurfaceToCurvesTool.kVZero")) 
	    		 (uiRes("m_xgmSurfaceToCurvesTool.kVOne")) 
			 (uiRes("m_xgmSurfaceToCurvesTool.kUZero")) 
			 (uiRes("m_xgmSurfaceToCurvesTool.kUOne")) -width 340
            -en2 0 -en4 0 -cw5 100 60 60 60 60 -sl 1
            xgmSurfaceToCurvesToolOrient;

        intSliderGrp -ann (uiRes("m_xgmSurfaceToCurvesTool.kNumCurvesAnn")) 
            -label (uiRes("m_xgmSurfaceToCurvesTool.kNumcurves"))
            -width 340 -cw3 80 40 220 -ad3 3 -field 1 -min 2 -max 100 -v 20 
            -fieldMinValue 2 -fieldMaxValue 5000
            xgmSurfaceToCurvesToolNumCurves;

        // not accepting value in -v at creation
        intSliderGrp -e -v 20 -width 340 xgmSurfaceToCurvesToolNumCurves;

        button -label (uiRes("m_xgmSurfaceToCurvesTool.kCreateCurves")) -w 340 -align "center"
            -ann ((uiRes("m_xgmSurfaceToCurvesTool.kCreateCurvesAnn")))
            -command "xgmSurfaceToCurvesToolCreate";

        setParent ..;
    }

    setParent ..;
}


global proc xgmSurfaceToCurvesToolCreate()
{
    int $numCurves = `intSliderGrp -q -v xgmSurfaceToCurvesToolNumCurves`;
    int $orient = `radioButtonGrp -q -sl xgmSurfaceToCurvesToolOrient` - 1;

    xgmMayaCurvesFromNURBS( "|SurfaceToCurves", $numCurves, $orient );
    xgmGroomParent( "|SurfaceToCurves_Group" );
}
