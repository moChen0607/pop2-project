$anglescale = 6;     #how tightly wrapped the spirals
$nspirals = 6;         #number of spirals
$gamma = 5;          #make whiter/brighter

$angle = $P[1]*$anglescale;   #y axis
$cos = cos($angle);
$sin = sin($angle);

$Pr = [$cos*$P[0]-$sin*$P[2],  0,  $sin*$P[0]+$cos*$P[2]];

$angle2 = atan2($Pr[0],$Pr[2]);

$spiral = sin($angle2*$nspirals);
gamma(expand($spiral,-1,1),$gamma)

