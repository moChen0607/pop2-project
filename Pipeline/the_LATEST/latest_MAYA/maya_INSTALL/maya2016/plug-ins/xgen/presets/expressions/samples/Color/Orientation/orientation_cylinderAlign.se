#Wraps orientation vector around cylindrical object along specified axis
#Apply to Texture Color

$axis = 1;#0,2  #X,Y,Z

$rotation = 0;#-90,90

$N2 = $axis == 0? [0,$N[1],$N[2]]:$axis == 1 ?  [$N[0],0,$N[2]] :  [$N[0],$N[1],0];

$rotateAxis = $axis == 0? [1,0,0]:$axis == 1 ? [0,1,0] :[0,0,1];

rotate( rotate($N2,$rotateAxis ,rad(90)),$N, rad($rotation) )*.5+.5
