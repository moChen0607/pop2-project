$freq = 0.990;
$xloc = 0.500;# -10.00,10.00
$yloc = 0.500;# -10.00,10.00
$up_x = 0.000;# -1.000,1.000
$up_y = 1.000;# -1.000,1.000
$up_z = 0.000;# -1.000,1.000

$xloc = $xloc*2-1;
$yloc = $yloc*2-1;
$P = up($P,[$up_x,$up_y,$up_z]);

$x = $P[0]-$xloc;
$y = $P[1]-$yloc;
$freq = (1-$freq)*800;
$prm = sqrt($x^2+$y^2);

$prm*$freq->cos()->smoothstep(-1, 1)