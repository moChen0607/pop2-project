$width =0.399;
$softness =0.458;

$ax = dot($N,[1,0,0])  -> abs() -> invert();
$ay = dot($N,[0,1,0])  -> abs() -> invert();
$az = dot($N,[0,0,1])  -> abs() -> invert();

$ax = ($ax * 3.33) -> clamp(0,1);
$ay = ($ay * 3.33) -> clamp(0,1);
$az = ($az * 3.33) -> clamp(0,1);

$ax*$ay*$az -> invert() -> clamp(0,1) -> smoothstep($width-$softness,$width+$softness)

