global proc string[] addBifrostKillplane( string $killPlanes )
{
	if(!`exists addBifrostCollider`) {
		// shared bifrost input  scripts here
		source "addBifrostCollider.mel";
	}
	string $result[];
	string $shell = "";
	string $selList[] = `ls -sl`;
	string $item;

	for( $item in $selList ) {
		// We will get the first container/shell available in the selection list
 		if( size($shell) == 0 ) {
			$shell = filterBifrostInput( $item, "bifrostContainer" );
		}
	}
	
	if( size($shell) > 1) {
		string $kpname = "bifrostKillplaneShape#";
		$result[0] = `createNode sketchPlane -n $kpname`;
		string $transform[] = `listRelatives -p -pa $result[0]`;
		rotate -x 90;

		addBifrostInput($shell, $transform[0], $killPlanes );
	}
	else {
		error (uiRes("m_addBifrostKillplane.kCannotAddKillplane"));
	}

	return $result;
}

