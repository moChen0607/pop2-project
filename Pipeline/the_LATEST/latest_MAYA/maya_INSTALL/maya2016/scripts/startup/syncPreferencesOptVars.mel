{
	if ($mode == "syncOptToCurrent") {
		optionVar
			-iv useSnapTolerance `snapMode -q -useTolerance`
			-iv snapTolerance `snapMode -q -tolerance`
			-iv snapUVTolerance `snapMode -q -uvTolerance`
