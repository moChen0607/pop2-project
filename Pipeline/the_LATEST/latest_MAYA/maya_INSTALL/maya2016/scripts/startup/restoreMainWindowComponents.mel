//
//
//  Creation Date:  19.Dec.2001
//
//  Description:
//      Restore the visibility of the main window UI components.
//
//  Input Arguments:
//      None.
//
//  Return Value:
//      None.
//
global proc restoreMainWindowComponents()
{
	global int    $gUIElementsRestored;


	global string $gMainPane;

	paneLayout -edit -manage false $gMainPane;

	// Restore to last saved state
	//
	setStatusLineVisible      (`optionVar -q LastStateStatusLineVisibility`);
	setShelfVisible           (`optionVar -q LastStateShelfVisibility`);
	setTimeSliderVisible      (`optionVar -q LastStateTimeSliderVisibility`);
	setPlaybackRangeVisible   (`optionVar -q LastStatePlaybackRangeVisibility`);
	setCommandLineVisible     (`optionVar -q LastStateCommandLineVisibility`);
	setHelpLineVisible        (`optionVar -q LastStateHelpLineVisibility`);
	setToolboxVisible         (`optionVar -q LastStateToolboxVisibility`);
	setAttributeEditorVisible (`optionVar -q LastStateAEVisibility`);
	setToolSettingsVisible    (`optionVar -q LastStateToolSettingsVisibility`);
	setChannelsLayersVisible  (`optionVar -q LastStateChannelsLayersVisibility`);
	setChannelsVisible        (`optionVar -q LastStateChannelsVisibility`);
	setLayersVisible          (`optionVar -q LastStateLayersVisibility`);

	paneLayout -edit -manage true $gMainPane;

	restoreLastPanelWithFocus();
	updatePrefsMenu();
	$gUIElementsRestored = true;
}
