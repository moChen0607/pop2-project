//
//
//  Creation Date:  Nov 6 2012
// 
//  Description:
//      A helper procedure to open a file.  Primarily used by Maya internally
//
//	Arguments:
//		$file - the file to open.
//		$menuParent - is the parent window.
//

global proc doOpenFile (string $file)
{
global string $gv_operationMode;

	// Make sure we get the full path to the file
	//
	string $full = $file;

	// If MAYA_PROJECT has been specified then $file is either a full
	// path or relative to MAYA_PROJECT so do not try to convert to
	// to a full path
	//
	string $proj = getenv ("MAYA_PROJECT");
	if ($proj == "") {
		python ("import os");
		$full = python ("os.path.abspath(\"" + $file + "\")");
	}

	// Load Direct Connect if necessary
	//
	if (`about -nt` || `about -mac`) {
		string $extension = fileExtension ($full);
		if (($extension != "ma") && ($extension != "mb")) {
			string $type[] = `file -query -type $full`;
			if (size($type) == 0) {
				loadPlugin "DirectConnect";
			}
		}
	}

	$gv_operationMode = "Open";
	pv_performAction (fromNativePath($full), "Best Guess");
}
