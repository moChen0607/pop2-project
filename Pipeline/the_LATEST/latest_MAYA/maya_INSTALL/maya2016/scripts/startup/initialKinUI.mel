// Kinematics UI initialization
//
	jointDisplayScale `optionVar -q ikJointDisplayScale`;
	jointDisplayScale -ikfk `optionVar -q ikIkFkJointDisplayScale`;
	ikHandleDisplayScale `optionVar -q ikHandleDisplayScale`;
	ikfkDisplayMethod -display `optionVar -q ikIkFkDisplayMethod`;

	//	Add the poleVectorConstraint item to the Constraints menu
	//	if needed.
	//
	//	one hardcoded names is used:
	//		The poleVectorConstraint menu item: poleVectorConstraint
	//
	global string $gMainConstraintsMenu;
	string $menuItemName = "poleVectorConstraint";

	//	Find the main window for the application.
	//
	string $mainWindow;
	string $windowList[] = `lsUI -wnd`;
	string $item;
	for ($item in $windowList) {
		if (1 == `window -q -mainWindow $item`) {
			$mainWindow = $item;
			break;
		}
	}

	int $found = 0;
	string $constraintsMenu = $mainWindow + "|" + $gMainConstraintsMenu;
	if (`menu -exists $constraintsMenu`) {
		string $menuItems[] = `menu -q -ia $constraintsMenu`;
		if (size($menuItems) > 0) {
			for ($item in $menuItems) {
				if ("" != match($menuItemName, $item)) {
					$found = 1;
					break;
				}
			}
		}

		if (1 != $found) {
			AniConstraintsMenuAddPoleVector($constraintsMenu);
		}
	}


