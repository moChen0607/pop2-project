global proc float
currentTimeUnitToFPS ()
{
	string $unit = `currentUnit -q -time`;
	float  $fps = 0;

	if( $unit == "game" ) {
		$fps = 15;
	} else if( $unit == "film" ) {
		$fps = 24;
	} else if( $unit == "pal" ) {
		$fps = 25;
	} else if( $unit == "ntsc" ) {
		$fps = 30;
	} else if( $unit == "show" ) {
		$fps = 48;
	} else if( $unit == "palf" ) {
		$fps = 50;
	} else if( $unit == "ntscf" ) {
		$fps = 60;
	} else if( $unit == "2fps" ) {
		$fps = 2;
	} else if( $unit == "3fps" ) {
		$fps = 3;
	} else if( $unit == "4fps" ) {
		$fps = 4;
	} else if( $unit == "5fps" ) {
		$fps = 5;
	} else if( $unit == "6fps" ) {
		$fps = 6;
	} else if( $unit == "8fps" ) {
		$fps = 8;
	} else if( $unit == "10fps" ) {
		$fps = 10;
	} else if( $unit == "12fps" ) {
		$fps = 12;
	} else if( $unit == "16fps" ) {
		$fps = 16;
	} else if( $unit == "20fps" ) {
		$fps = 20;
	} else if( $unit == "40fps" ) {
		$fps = 40;
	} else if( $unit == "75fps" ) {
		$fps = 75;
	} else if( $unit == "80fps" ) {
		$fps = 80;
	} else if( $unit == "100fps" ) {
