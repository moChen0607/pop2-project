	} else if( $unit == "600fps" ) {
		$fps = 600;
	} else if( $unit == "750fps" ) {
		$fps = 750;
	} else if( $unit == "1200fps" ) {
		$fps = 1200;
	} else if( $unit == "1500fps" ) {
		$fps = 1500;
	} else if( $unit == "2000fps" ) {
		$fps = 2000;
	} else if( $unit == "3000fps" ) {
		$fps = 3000;
	} else if( $unit == "6000fps" ) {
		$fps = 6000;
	}

	return ($fps);
}
