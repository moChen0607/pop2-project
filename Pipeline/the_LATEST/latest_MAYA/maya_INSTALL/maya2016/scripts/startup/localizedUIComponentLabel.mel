//
//  Description:
//      This script defines the procedure for getting the localized UI Component names.
//

//<doc>
//<name localizedUIComponentLabel>
//
//<synopsis>
//		localizedUIComponentLabel( string $englishPanelLabel )
//
//<description>
//		Use this procedure to obtain the localized versions of 
//      UI Component labels such as "Status Line", "Shelf", "Time Slider",
//		"Range Slider", "Command Line", "Help Line", "Maya Live Control Panel",
//		"Tool Box", "Attribute Editor", "Tool Settings", "Channel Box / Layer Editor",
//		"Layer Editor", and "Channel Box".
//		
//<returns>
//      string: the localized version of the label passed in.
//
//      If localizedUIComponentLabel() is passed a label for which no
//		localized label is defined, the returned result is the unchanged 
//      input string.  
//
//<examples>
//		// This command creates a menu item with the localized version of the attribute editor
//		// name as its label.
//
//		menuItem -label (localizedUIComponentLabel("Attribute Editor"))
//</doc>

//
//  Procedure Name:
//      localizedUIComponentLabel.
//
//  Description:
//		Returns the localized UI component label.
//
//  Input Arguments:
//		The english version of the UI component label.
//
//  Return Value:
//      The localized version of the UI component label.
//

global proc string localizedUIComponentLabel(string $name)
{
	string $displayName = $name;
	
	if ($name == "Status Line"){
		$displayName = (uiRes("m_localizedUIComponentLabel.kStatusLine"));
	}else if ($name == "Shelf"){
		$displayName = (uiRes("m_localizedUIComponentLabel.kShelf"));
	}else if ($name == "Time Slider"){
		$displayName = (uiRes("m_localizedUIComponentLabel.kTimeSlider"));
	}else if ($name == "Range Slider"){
		$displayName = (uiRes("m_localizedUIComponentLabel.kRangeSlider"));
	}else if ($name == "Command Line"){
		$displayName = (uiRes("m_localizedUIComponentLabel.kCommandLine"));
	}else if ($name == "Help Line"){
		$displayName = (uiRes("m_localizedUIComponentLabel.kHelpLine"));
	}else if ($name == "Tool Box"){
		$displayName = (uiRes("m_localizedUIComponentLabel.kToolBox"));
	}else if ($name == "Attribute Editor"){
		$displayName = (uiRes("m_localizedUIComponentLabel.kAttributeEditor"));
	}else if ($name == "Tool Settings"){
		$displayName = (uiRes("m_localizedUIComponentLabel.kToolSettings"));
	}else if ($name == "Channel Box / Layer Editor" ){
		$displayName = (uiRes("m_localizedUIComponentLabel.kChannelBoxLayerEditor"));
	}else if ($name == "Channel Box" ){
		$displayName = (uiRes("m_localizedUIComponentLabel.kChannelBox"));
	}else if ($name == "Layer Editor" ){
		$displayName = (uiRes("m_localizedUIComponentLabel.kLayerEditor"));
	}
	
	else{
		uiToMelMsg( "UIComponents_melToUI", $name, 0 );
	}
	
	return $displayName;
}
