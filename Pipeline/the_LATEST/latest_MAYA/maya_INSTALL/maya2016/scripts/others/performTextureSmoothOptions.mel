//  Description:
//      This script is use to display and update the smooth uv tool options.
//
//  Input Arguments:
//		None.
//
//  Return Value:
//      None.
//


//  Procedure Name:
//      assembleCmd
//
//  Description:
//		Construct the command that will apply the option box values.
//
//  Input Arguments:
//      None.
//
proc string assembleCmd()
{

	string $cmd;
	setToolTo texSmoothSuperContext;
	string $context = "texSmoothCtx";

	int $space = `radioButtonGrp -q -sl txSmoothSpaceRadio` - 1;
	int $pin = `checkBoxGrp -q -v1 txSmoothPinBorderCheck`;
	
	$cmd  = "texSmoothContext -edit";
	$cmd += " -space " + $space;
	$cmd += " -pb " + $pin;
	$cmd += " " + $context;

	return $cmd;
}

global proc txSmoothToolCallback(string $parent, int $doIt)
{
	if ($doIt ) {
		//	Execute the command with the option settings.
		$cmd = `assembleCmd`;
		eval($cmd);	
	}
	else {
		txSmoothToolRefresh $parent;
	}
}


global proc txSmoothToolRefresh(string $parent )
{
	setToolTo texSmoothSuperContext;
	string $context = "texSmoothCtx";
	setParent $parent;

	int $hasPinBorder  = `texSmoothContext -q -pb $context`;
	checkBoxGrp -e -v1 $hasPinBorder txSmoothPinBorderCheck;
	
	int $space = `texSmoothContext -q -space $context`;
	switch ($space)
	{
		case 0:
			 radioButtonGrp -e -sl 1 txSmoothSpaceRadio;
		break;
		case 1:
			radioButtonGrp -e -sl 2  txSmoothSpaceRadio;
		break;
	}
}

global proc txSmoothToolSetup(string $parent, int $doIt)
{
	setParent $parent;
	setUITemplate -pushTemplate OptionsTemplate;
	
	string $emptyLabel = "";
	if (`about -linux`) {
		$emptyLabel = " ";
	}
		
	if ($doIt == false) {

		columnLayout textureSmooth;

			frameLayout 
				-collapsable true
				-collapse false
				-label (uiRes("m_performTextureSmoothOptions.kSmoothSettings"))
				txSmoothFrame;

				columnLayout txSmoothOptions;
					separator -style "none";

					checkBoxGrp -ncb 1 
						-label (uiRes("m_performTextureSmoothOptions.kSmoothPin")) 
						-label1 $emptyLabel
						txSmoothPinBorderCheck;

					radioButtonGrp -nrb 2
						-label (uiRes("m_performTextureSmoothOptions.kSpace"))  
						-label1 (uiRes("m_performTextureSmoothOptions.kUVSpace")) 
						-label2 (uiRes("m_performTextureSmoothOptions.kWorld")) 
						txSmoothSpaceRadio;

				setParent ..;
			setParent ..;
		setParent ..;

	}
	
	setUITemplate -popTemplate;
	
	txSmoothToolCallback($parent, false);

}

//
//  Procedure Name:
//      txSmoothToolOptions
//
//  Description:
//		Construct the option box UI.  Involves accessing the standard option
//		box and customizing the UI accordingly.
//
//  Input Arguments:
//      None.
//
//  Return Value:
//      None.
//
proc txSmoothToolOptions()
{
	//	Name of the command for this option box.
	//
	string $commandName = "txSmoothTool";

	//	Build the option box actions.
	//
	string $callback = ($commandName + "Callback");
	string $setup = ($commandName + "Setup");

 	//	STEP 1:  Get the option box.
	//	============================
	//
	//	The value returned is the name of the layout to be used as
	//	the parent for the option box UI.
	//
	string $layout = getOptionBox();
	setParent $layout;
	
	//	STEP 2:  Pass the command name to the option box.
	//	=================================================
	//
	//	Any default option box behaviour based on the command name is set 
	//	up with this call.  For example, updating the 'Help' menu item with
	//	the name of the command.
	//
	setOptionBoxCommandName($commandName);
	
	//	STEP 3:  Activate the default UI template.
	//	==========================================
	//
	//	Activate the default UI template so that the layout of this 
	//	option box is consistent with the layout of the rest of the 
	//	application.
	//
	setUITemplate -pushTemplate DefaultTemplate;

	//	STEP 4: Create option box contents.
	//	===================================
	//	
	//	This, of course, will vary from option box to option box.	
	//	Turn on the wait cursor.
	//
	waitCursor -state 1;

	tabLayout -tabsVisible 0 -scrollable 1;
	
	string $parent = `columnLayout -adjustableColumn 1`;

	//	Turn off the wait cursor.
	//
	waitCursor -state 0;
	
	//	Step 5: Deactivate the default UI template.
	//	===========================================
	//
	setUITemplate -popTemplate;

	//	Step 6: Customize the buttons.  
	//	==============================
	//
	//	Provide more descriptive labels for the buttons.  This is not 
	//	necessary, but in some cases, for example, a button labelled 
	//	'Create' may be more meaningful to the user than one labelled
	//	'Apply'.
	//
	//	Disable those buttons that are not applicable to the option box.
	//
	//	Attach actions to those buttons that are applicable to the option
	//	box.  Note that the 'Close' button has a default action attached 
	//	to it that will hide the window.  If a a custom action is
	//	attached to the 'Close' button then be sure to call the 'hide the
	//	option box' procedure within the custom action so that the option
	//	box is hidden properly.

	//	'Apply' button.
	//
	string $applyBtn = getOptionBoxApplyBtn();
	button -edit
		-command ($callback + " " + $parent + " " + 1)
		$applyBtn;

	//	'Save' button.
	//
	string $saveBtn = getOptionBoxSaveBtn();
	button -edit 
		-command ($callback + " " + $parent + " " + 1 + "; hideOptionBox")
		$saveBtn;

	//	'Reset' button.
	//
	string $resetBtn = getOptionBoxResetBtn();
	button -edit 
		-command ($setup + " " + $parent + " " + 1)
		$resetBtn;

	//	Step 7: Set the option box title.
	//	=================================
	//
	setOptionBoxTitle (uiRes("m_performTextureSmoothOptions.kUVSmoothToolOptions"));

	//	Step 8: Customize the 'Help' menu item text.
	//	============================================
	//
	setOptionBoxHelpTag( "textureSmoothTool" );

	//	Step 9: Set the current values of the option box.
	//	=================================================
	//
	eval (($setup + " " + $parent + " " + 0));	
	
	//	Step 10: Show the option box.
	//	=============================
	//
	showOptionBox();
}


//
//  Procedure Name:
//      performTextureSmoothOptions
//
//  Description:
//
//  Input Arguments:
//      0 - Execute the command.
//      1 - Show the option box dialog.
//      2 - Return the command.
//
global proc string performTextureSmoothOptions(int $action)
{
	string $cmd = "";

	switch ($action) {

		//	Execute the command.
		//
		case 0:
			//	Get the command.
			//
			$cmd = `assembleCmd`;

			//	Execute the command with the option settings.
			//
			eval($cmd);
			break;

		//	Show the option box.
		//
		case 1:
			txSmoothToolOptions;
			break;

		//	Return the command string.
		//
		case 2:
			//	Get the command.
			//
			$cmd = `assembleCmd`;
			break;
	}
	return $cmd;
}

