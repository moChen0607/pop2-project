//
//  Procedure Name:
//      createSubdCone
//
//  Description:
//		Create a subd cone
//
//  Input Arguments:
//      None
//
//  Return Value:
//      None.
//
global proc createSubdConeProc(){
	string $polyName[];
	string $subdName[];   
	$polyName = `polyCone -r 1.5 -h 2.2 -sx 4 -sy 2 -sz 0 -ax 0 1 0 -cuv 2 -ch 1`;

	// normalize UVs into 0-1 domain
	polyNormalizeUV  -normalizeType 1 -preserveAspectRatio on ($polyName[0] + ".f[*]");

	$subdName = `polyToSubdiv -ap 0 -ch off -aut off  -maxPolyCount 1000  -maxEdgesPerVert 32 -name "subdivCone#" $polyName[0]`;
	delete $polyName;
	select -r $subdName;
}

global proc createSubdCone(){
	string $cmd;
	
	$cmd = "createSubdConeProc()";
	
	evalEcho($cmd);
}
