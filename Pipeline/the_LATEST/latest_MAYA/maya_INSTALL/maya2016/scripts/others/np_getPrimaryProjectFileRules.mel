//
//  Description:
//          Get the list of primary project file rules
//  Input:
//          the value true means it will return the default file rules list.
//          the value false means it will return the file rules list of the current workspace
//

global proc string[] np_getPrimaryProjectFileRules(int $bUseDefaults)
{
    string $defaults[] =
	{
//		Label							            file rule name	    Default				
		(uiRes("m_np_getPrimaryProjectFileRules.kScenes")),		            "scene",		    "scenes",			
		(uiRes("m_np_getPrimaryProjectFileRules.kTemplates")),				"templates",		"assets",			
		(uiRes("m_np_getPrimaryProjectFileRules.kImages")),				    "images",		    "images",			
		(uiRes("m_np_getPrimaryProjectFileRules.kSourceImages")),	    "sourceImages",		"sourceimages",		
		(uiRes("m_np_getPrimaryProjectFileRules.kRenderData")),	        "renderData",		"renderData",	
		(uiRes("m_np_getPrimaryProjectFileRules.kClips")),				        "clips",		    "clips",			
		(uiRes("m_np_getPrimaryProjectFileRules.kSound")),				        "sound",		    "sound",			
		(uiRes("m_np_getPrimaryProjectFileRules.kScripts")),				    "scripts",		    "scripts",			
		(uiRes("m_np_getPrimaryProjectFileRules.kDiskCache")),			"diskCache",		"data",						    
		(uiRes("m_np_getPrimaryProjectFileRules.kMovies")),				    "movie",		    "movies",			    	    
		(uiRes("m_np_getPrimaryProjectFileRules.kTranslatorData")),	"translatorData",	"data",
		(uiRes("m_np_getPrimaryProjectFileRules.kAutoSave")),				"autoSave",		    "autosave"
	};
				
	if(!$bUseDefaults)
	{
	    int $listSize = size($defaults);
	    for($i = 0; $i < $listSize; $i += 3)
	    {
	        $defaults[$i+2] = `workspace -q -fre $defaults[$i+1]`;
	    }	
	}	
			
	return $defaults;
}
