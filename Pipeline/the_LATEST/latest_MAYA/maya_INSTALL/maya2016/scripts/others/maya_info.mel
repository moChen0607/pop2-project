global proc maya_info()
//
// Description:
//    output information about Maya,  version, build, platform
//    for use with automated task
//
{
  string $cutID = `about -c`;
  string $date = `about -date`;
  string $name = `about -p`;
  string $version = `about -a`+`about -v`;
  string $changelist = substring($cutID, 14, 20);
  string $description = `about -a`;
  string $buildID = `about -c`;

  print( "\n\n\n" );
  print( "######################################\n" );
  print( "start\n\n\n" );
  print( "name: " + $name + "\n" );
  print( "type: \n" );
  print( "pattern: \n" );
  print( "changelist: " + $changelist + "\n" );
  print( "version: " + $version + "\n" );
  print( "description: " + $description + "\n" );
  print( "buildNumber: " + $buildID + "\n" );
  print( "buildDate: " + $date + "\n" );
  print( "buildPlatform: " );
  if (`about -win`)
  {
    if (`about -x64`){
	  print( "Win64\n" );
	}else{
	  print( "Win32\n" );}
	}
  if (`about -linux64`){print( "Linux\n" );}
  if (`about -mac`){print( "Mac\n" );}
  print( "checksum: \n" );
  print( "state: \n" );
  print( "user: \n" );

  print "\n\n";
  print "end\n";
  print "######################################\n";
}
