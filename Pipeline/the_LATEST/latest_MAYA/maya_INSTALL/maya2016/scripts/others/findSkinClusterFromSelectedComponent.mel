global proc string findSkinClusterFromSelectedComponent(string $component)
{
    string $selElems[];
    tokenize($component, ".", $selElems );
	int $nbElem = size($selElems);
	string $noVertSelectedStr = (uiRes("m_findSkinClusterFromSelectedComponent.kArtAttrSkinNoVertsSelected"));
	if ( $nbElem != 2 ) 
	{
		error($noVertSelectedStr);		
		return "";
	}
	string $selMesh[] = `listRelatives -shapes -path -ni $selElems[0]`;
	if(size($selMesh) <=0) 
	{
	    error($noVertSelectedStr);		
		return "";
    }
    string $skinCluster = findRelatedSkinCluster($selMesh[0]);
    if($skinCluster == "")
    {
        error((uiRes("m_findSkinClusterFromSelectedComponent.kArtAttrSkinNoSkinClusterFound")));		
		return "";
    }
    return $skinCluster;
}
