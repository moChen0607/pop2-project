//
//
// Creation Date:  14 January 1999
//
//  Procedure Name:
//      modelWithToolsAll
//
//  Description:
//	    Set or get the values for the actions/tools.
//
//  Input Arguments:
//		-1 --> query and return what the current settings are
//       0 --> set all to actions
//       1 --> set all to tools
//
//  Return Value:
//      0 if all are actions, 1 if all are tools, -1 if its mixed.
//

global proc int modelWithToolsAll( int $onOrOff )
{
	int $val;
	if( -1 == $onOrOff ) {
		$val = `optionVar -q modelWithToolAlignCurve`;
		if( `optionVar -q modelWithToolAlignSurface` != $val ) return -1;
		if( `optionVar -q modelWithToolAttachCurve` != $val ) return -1;
		if( `optionVar -q modelWithToolAttachSurface` != $val ) return -1;
		if( `optionVar -q modelWithToolBevel` != $val ) return -1;
		if( `optionVar -q modelWithToolBoundary` != $val ) return -1;
		if( `optionVar -q modelWithToolCircFillet` != $val ) return -1;
		if( `optionVar -q modelWithToolCloseCurve` != $val ) return -1;
		if( `optionVar -q modelWithToolCloseSurface` != $val ) return -1;
		if( `optionVar -q modelWithToolCutCurve` != $val ) return -1;
		if( `optionVar -q modelWithToolCvHardness` != $val ) return -1;
		if( `optionVar -q modelWithToolDetachCurve` != $val ) return -1;
		if( `optionVar -q modelWithToolDetachSurface` != $val ) return -1;
		if( `optionVar -q modelWithToolDuplCurve` != $val ) return -1;
		if( `optionVar -q modelWithToolExtendCurve` != $val ) return -1;
		if( `optionVar -q modelWithToolExtendCosCurve` != $val ) return -1;
		if( `optionVar -q modelWithToolExtendSurface` != $val ) return -1;
		if( `optionVar -q modelWithToolExtrude` != $val ) return -1;
		if( `optionVar -q modelWithToolFilletCurve` != $val ) return -1;
		if( `optionVar -q modelWithToolFitBspline` != $val ) return -1;
		if( `optionVar -q modelWithToolFreeFillet` != $val ) return -1;
		if( `optionVar -q modelWithToolGlobalStitch` != $val ) return -1;
		if( `optionVar -q modelWithToolInsertCurve` != $val ) return -1;
		if( `optionVar -q modelWithToolInsertSurface` != $val ) return -1;
		if( `optionVar -q modelWithToolIntersect` != $val ) return -1;
		if( `optionVar -q modelWithToolIntersectCurve` != $val ) return -1;
		if( `optionVar -q modelWithToolLoft` != $val ) return -1;
		if( `optionVar -q modelWithToolOffsetCurve` != $val ) return -1;
		if( `optionVar -q modelWithToolOffsetCoS` != $val ) return -1;
		if( `optionVar -q modelWithToolOffsetSurface` != $val ) return -1;
		if( `optionVar -q modelWithToolPlanar` != $val ) return -1;
		if( `optionVar -q modelWithToolProject` != $val ) return -1;
		if( `optionVar -q modelWithToolProjectTangent` != $val ) return -1;
		if( `optionVar -q modelWithToolRebuildCurve` != $val ) return -1;
		if( `optionVar -q modelWithToolRebuildSurface` != $val ) return -1;
		if( `optionVar -q modelWithToolReverseCurve` != $val ) return -1;
		if( `optionVar -q modelWithToolReverseSurface` != $val ) return -1;
		if( `optionVar -q modelWithToolRevolve` != $val ) return -1;
		if( `optionVar -q modelWithToolSmoothCurve` != $val ) return -1;
		if( `optionVar -q modelWithToolSquareSrf` != $val ) return -1;
		if( `optionVar -q modelWithToolUntrim` != $val ) return -1;
		if( `optionVar -q modelWithToolDuplicateSurface` != $val ) return -1;
	}
	else {
		optionVar -iv modelWithToolAlignCurve $onOrOff;
		optionVar -iv modelWithToolAlignSurface $onOrOff;
		optionVar -iv modelWithToolAttachCurve $onOrOff;
		optionVar -iv modelWithToolAttachSurface $onOrOff;
		optionVar -iv modelWithToolBevel $onOrOff;
		optionVar -iv modelWithToolBoundary $onOrOff;
		optionVar -iv modelWithToolCircFillet $onOrOff;
		optionVar -iv modelWithToolCloseCurve $onOrOff;
		optionVar -iv modelWithToolCloseSurface $onOrOff;
		optionVar -iv modelWithToolCutCurve $onOrOff;
		optionVar -iv modelWithToolCvHardness $onOrOff;
		optionVar -iv modelWithToolDetachCurve $onOrOff;
		optionVar -iv modelWithToolDetachSurface $onOrOff;
		optionVar -iv modelWithToolDuplCurve $onOrOff;
		optionVar -iv modelWithToolExtendCurve $onOrOff;
		optionVar -iv modelWithToolExtendCosCurve $onOrOff;
		optionVar -iv modelWithToolExtendSurface $onOrOff;
		optionVar -iv modelWithToolExtrude $onOrOff;
		optionVar -iv modelWithToolFilletCurve $onOrOff;
		optionVar -iv modelWithToolFitBspline $onOrOff;
		optionVar -iv modelWithToolFreeFillet $onOrOff;
		optionVar -iv modelWithToolGlobalStitch $onOrOff;
		optionVar -iv modelWithToolInsertCurve $onOrOff;
		optionVar -iv modelWithToolInsertSurface $onOrOff;
		optionVar -iv modelWithToolIntersect $onOrOff;
		optionVar -iv modelWithToolIntersectCurve $onOrOff;
		optionVar -iv modelWithToolLoft $onOrOff;
		optionVar -iv modelWithToolOffsetCurve $onOrOff;
		optionVar -iv modelWithToolOffsetCoS $onOrOff;
		optionVar -iv modelWithToolOffsetSurface $onOrOff;
		optionVar -iv modelWithToolPlanar $onOrOff;
		optionVar -iv modelWithToolProject $onOrOff;
		optionVar -iv modelWithToolProjectTangent $onOrOff;
		optionVar -iv modelWithToolRebuildCurve $onOrOff;
		optionVar -iv modelWithToolRebuildSurface $onOrOff;
		optionVar -iv modelWithToolReverseCurve $onOrOff;
		optionVar -iv modelWithToolReverseSurface $onOrOff;
		optionVar -iv modelWithToolRevolve $onOrOff;
		optionVar -iv modelWithToolSmoothCurve $onOrOff;
		optionVar -iv modelWithToolSquareSrf $onOrOff;
		optionVar -iv modelWithToolUntrim $onOrOff;
		optionVar -iv modelWithToolDuplicateSurface $onOrOff;
		$val = $onOrOff;
	}
	return $val;
};

