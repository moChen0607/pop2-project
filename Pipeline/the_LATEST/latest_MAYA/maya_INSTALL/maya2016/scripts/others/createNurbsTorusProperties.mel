global proc createNurbsTorusProperties()
{
	// Global template variables for form spacing
	global int $gToolOptionBoxTemplateDescriptionMarginWidth;
	global int $gToolOptionBoxTemplateFrameSpacing;
	
	string $parent = `toolPropertyWindow -q -location`;
	setParent $parent;
	
	setUITemplate -pushTemplate ToolOptionBoxTemplate;

	string $type = "createNurbsTorus";

	// Form layout
	$parent = `formLayout $type`;

		// Description frame
		string $descriptionFrame = 
		`frameLayout -label (uiRes("m_createNurbsTorusProperties.kDescriptionFrame")) -mw $gToolOptionBoxTemplateDescriptionMarginWidth`;

			text -label (uiRes("m_createNurbsTorusProperties.kCreateNurbsTorusToolDescApp")) createNurbsTorusToolDescLabel;			
	
		setParent $parent;

		// Settings frame
		string $settingsFrame = 
		`frameLayout -label (uiRes("m_createNurbsTorusProperties.kCreateSettingsFrame"))`;
			columnLayout;

				floatSliderGrp -field true -l (uiRes("m_createNurbsTorusProperties.kStartSweep"))
					-min 0.0 -max 360.0 -v 0.0 createNurbsTorusStartSweepSlider;

				floatSliderGrp -field true -l (uiRes("m_createNurbsTorusProperties.kEndSweep"))
					-min 0.0 -max 360.0 -v 360.0 createNurbsTorusEndSweepSlider;

				floatSliderGrp -field true -l (uiRes("m_createNurbsTorusProperties.kMinorSweep"))
					-min 0.0 -max 360.0 -v 360.0 createNurbsTorusMinorSweepSlider;

				floatSliderGrp -field true -l (uiRes("m_createNurbsTorusProperties.kMinorRadius"))
					-min 0.0 -max 100.0 -v 0.5 -fieldMaxValue 100 createNurbsTorusMinorRadiusSlider;

				radioButtonGrp -numberOfRadioButtons 2 -label (uiRes("m_createNurbsTorusProperties.kSurfaceDegree"))					
					-label1 (uiRes("m_createNurbsTorusProperties.kLinear"))  
					-label2 (uiRes("m_createNurbsTorusProperties.kCubic"))
					-select 2
					createNurbsTorusSurfaceDegreeRadioButtonGrp;
			
				radioButtonGrp 
					-numberOfRadioButtons 3 
					-label (uiRes("m_createNurbsTorusProperties.kUseTolerance"))
					-label1 (uiRes("m_createNurbsTorusProperties.kNone"))
					-label2 (uiRes("m_createNurbsTorusProperties.kLocal"))
					-label3 (uiRes("m_createNurbsTorusProperties.kGlobal"))
					createNurbsTorusToleranceRadioButtonGrp;

			/* ________________________________________________________________ */

			tabLayout -tabsVisible false createNurbsTorusTabLayoutForTolerance;
				
				columnLayout createNurbsTorusTabWithoutTolerance;

				intSliderGrp -field true -l (uiRes("m_createNurbsTorusProperties.kSections"))
					-min 1 -max 50 -v 1 createNurbsTorusSectionsSlider;

				intSliderGrp -field true -l (uiRes("m_createNurbsTorusProperties.kSpans"))
					-min 1 -max 50 -v 1 createNurbsTorusSpansSlider;
					
			setParent ..;
										
					columnLayout createNurbsTorusTabWithTolerance;

						floatSliderGrp 
							-label  (uiRes("m_createNurbsTorusProperties.kPositionalTolerance"))
							-minValue 0.001 
							-maxValue 1 
							-fieldMaxValue 100.0
							createNurbsTorusToleranceSlider;
						
					setParent ..;
					
				setParent ..;

		setParent $parent;
		
		string $adjustFrame = 		
		`frameLayout -label (uiRes("m_createNurbsTorusProperties.kAdjustmentAfterCreateSettings"))`;
			columnLayout;
			
				checkBoxGrp -label1 (uiRes("m_createNurbsTorusProperties.kDoDragEditLine"))
					-value1 false
					-enable true
					createNurbsTorusDragEditCheckBox;
					
		setParent $parent;		

		// Single-click Settings frame
		string $singleClickSettingsFrame = 
		`frameLayout -label (uiRes("m_createNurbsTorusProperties.kSettingsFrame"))`;
			columnLayout;

				floatSliderGrp -field true -l (uiRes("m_createNurbsTorusProperties.kRadius"))
					-min 0.01 -max 10.0 -v 1.0 -fieldMaxValue 1000 createNurbsTorusRadiusSlider;
					
				
				radioButtonGrp 
					-label (uiRes("m_createNurbsTorusProperties.kAxis"))			
					-numberOfRadioButtons 3
					-label1 (uiRes("m_createNurbsTorusProperties.kAxisX"))
					-label2 (uiRes("m_createNurbsTorusProperties.kAxisY"))
					-label3 (uiRes("m_createNurbsTorusProperties.kAxisZ"))
					createNurbsTorusAxisType1RadioButtonGrp;
                
				radioButtonGrp 
					-numberOfRadioButtons 2 
					-shareCollection createNurbsTorusAxisType1RadioButtonGrp					
					-label1 (uiRes("m_createNurbsTorusProperties.kFree"))
					-label2 (uiRes("m_createNurbsTorusProperties.kActiveView"))
					createNurbsTorusAxisType2RadioButtonGrp;

				floatFieldGrp 
					-label (uiRes("m_createNurbsTorusProperties.kAxisDefinition"))
					-numberOfFields 3
					-enable false
					createNurbsTorusAxisFieldsFloatGrp;

	setParent ..;

	// Attach Description/Settings frames to form layout
	formLayout -e
		-af $descriptionFrame "top" $gToolOptionBoxTemplateFrameSpacing
		-af $descriptionFrame "left" $gToolOptionBoxTemplateFrameSpacing
		-af $descriptionFrame "right" $gToolOptionBoxTemplateFrameSpacing
		-an $descriptionFrame "bottom"

		-ac $settingsFrame "top" $gToolOptionBoxTemplateFrameSpacing $descriptionFrame
		-af $settingsFrame "left" $gToolOptionBoxTemplateFrameSpacing
		-af $settingsFrame "right" $gToolOptionBoxTemplateFrameSpacing
		-an $settingsFrame "bottom" 

		-ac $adjustFrame "top" $gToolOptionBoxTemplateFrameSpacing $settingsFrame
		-af $adjustFrame "left" $gToolOptionBoxTemplateFrameSpacing
		-af $adjustFrame "right" $gToolOptionBoxTemplateFrameSpacing
		-an $adjustFrame "bottom" 
		
		-ac $singleClickSettingsFrame "top" $gToolOptionBoxTemplateFrameSpacing $adjustFrame
		-af $singleClickSettingsFrame "left" $gToolOptionBoxTemplateFrameSpacing
		-af $singleClickSettingsFrame "right" $gToolOptionBoxTemplateFrameSpacing
		-an $singleClickSettingsFrame "bottom" 

	$parent;

	setUITemplate -popTemplate;
}
