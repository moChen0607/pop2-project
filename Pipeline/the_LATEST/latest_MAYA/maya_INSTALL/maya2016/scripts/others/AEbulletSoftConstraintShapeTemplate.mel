//
//	Description:
//		Define the appearance of the attribute editor for the bulletSoftConstraint node.
//

global proc AEbulletSoftConstraintShapeTemplate ( string $nodeName )
{
	editorTemplate -beginScrollLayout;

	// Add
	string $softBody = (uiRes("m_AEbulletSoftConstraintShapeTemplate.kSoftBody"));
	string $rigidBody = (uiRes("m_AEbulletSoftConstraintShapeTemplate.kRigidBody"));

    editorTemplate -callCustom ("AEinputNew \"" + $softBody + "\"")
                               ("AEinputReplace \"" + $softBody + "\"")
                                "softBody";        
    editorTemplate -callCustom ("AEinputNew \"" + $rigidBody + "\"")
                               ("AEinputReplace \"" + $rigidBody + "\"")
                                "rigidBody";        
	editorTemplate -addControl iconSize;

	// Inherit
	AEshapeTemplate( $nodeName );

