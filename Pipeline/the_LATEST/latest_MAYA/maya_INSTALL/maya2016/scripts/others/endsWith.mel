//<doc>
//<name endsWith>
//
//<synopsis>
//		int endsWith(string $s, string $suffix)
//
//<returns>
//		int : true if $s ends with $suffix
//
//<description>
//		This procedure returns true if the string $s ends with
//		the string $suffix.
//
//<examples>
//		endsWith("abc", "bc");
//		// Result: 1 //
//
//		endsWith("abc", "ab");
//		// Result: 0 //
//
//		endsWith("abc", "");
//		// Result: 1 //
//
//<related startsWith startString endString>
//
//</doc>

global proc int endsWith(string $s, string $suffix)
{
	int $endsWith = false;

	int $sLength = size($s);
	int $suffixLength = size($suffix);

	if ($sLength >= $suffixLength)
	{
		if (endString($s, $suffixLength) == $suffix)
		{
			$endsWith = true;
		}
	}

	return $endsWith;
}
