global proc polySplit2Properties()
{
	string $parent = `toolPropertyWindow -q -location`;
	setParent $parent;

	setUITemplate -pushTemplate OptionsTemplate;

	string $title = (uiRes("m_polySplit2Properties.kPolySplit2Title"));

	columnLayout polySplit2;

		checkBoxGrp 
			-label "" -label1 (uiRes("m_polySplit2Properties.kPolySplit2DetachEdges")) 
			PolySplit2DetachEdges;

		checkBoxGrp 
			-label "" -label1 (uiRes("m_polySplit2Properties.kPolySplit2ConstrainToEdges")) 
			PolySplit2ConstrainToEdge;

		checkBoxGrp
			-label "" -label1 (uiRes("m_polySplit2Properties.kPolySplit2InsertWithEdgeFlow"))
			PolySplit2InsertWithEdgeFlow;

		floatSliderGrp
			-field true
			-label (uiRes("m_polySplit2Properties.kPolySplit2AdjustEdgeFlow"))
			-min 0.0
			-max 1.0
			-fieldMinValue -1000000
			-fieldMaxValue 1000000
			PolySplit2AdjustEdgeFlow;

		frameLayout -collapsable true -collapse false
			-label (uiRes("m_polySplit2Properties.kPolySplit2SnapSettings"))  polySplit2SnapFrame;

			columnLayout polySplit2SnapOptions;
				separator -style "none";

				intFieldGrp 
					-label (uiRes("m_polySplit2Properties.kNumberOfPoints")) 
					PolySplit2EdgeMagnets;

				floatSliderGrp  
					-field true 
					-label (uiRes("m_polySplit2Properties.kPolySplit2SnapTol")) 
					-min 0.0 
					-max 10.0 
					PolySplit2SnapTolerance;
			setParent ..;

		setParent ..;

		separator -style "none" -height 5;

		frameLayout -collapsable true -collapse false
			-label (uiRes("m_polySplit2Properties.kPolySplit2ColorSettings"))  polySplit2ColorFrame;

			columnLayout polySplit2SnapOptions;
			separator -style "none";
						
			colorSliderGrp -label (uiRes("m_polySplit2Properties.kSnapEdgeColor")) polySplit2EdgeColorSlider;
			colorSliderGrp -label (uiRes("m_polySplit2Properties.kSnapFaceColor")) polySplit2FaceColorSlider;
			colorSliderGrp -label (uiRes("m_polySplit2Properties.kSnapVertexColor")) polySplit2VertexColorSlider;
			colorSliderGrp -label (uiRes("m_polySplit2Properties.kSnapMagnetColor")) polySplit2MagnetColorSlider;
			colorSliderGrp -label (uiRes("m_polySplit2Properties.kHilightColor")) polySplit2PSHColorSlider;
			colorSliderGrp -label (uiRes("m_polySplit2Properties.kSplitLineColor")) polySplit2LineColorSlider;

			setParent ..;

		setParent ..;

	setParent ..;

	setUITemplate -popTemplate;
}
