//
//
//  Creation Date:  July 2, 1997
//
//  Description:
//      Creates a list of filters and their creation commands for use
//		by the deviceEditor.
//
//  Input Arguments:
//		int			Active/Inactive state.
//						0 for inactive.
//						1 for active.
// 
//  Return Value:
//		string[]	An array of filter names and creation commands.
//
//		The array alternates between a string containing the filter name
//		and a string containing the commands to create the filter.
//		
//

global proc string[] createFilterList(int $active)
{
	if (!`licenseCheck -m "edit" -typ "complete"`) {
		string $filters[];
		return $filters;
	}

	string $activeState = " -deviceEditorActive " + $active + ";";

	//	There must be an even pairing of filter names and creation commands
	//
	string $filters[2] = {
	//	NAME		CREATION COMMANDS
	//	----------------------------------------------------------------
		(uiRes("m_createFilterList.kEuler")),	
			"filter -t filterEuler -n \"euler\"" + $activeState
	};

	return $filters;
}
