global proc selectSolidType()
{
    global string $platonicSolidName;
    global string $platonicSolidType;

	string $var = $platonicSolidName + "SolidType" ;
	int $val = (`optionMenuGrp -query -sl $var`) - 1 ;	

	switch($val) {
		case 0:
			$platonicSolidType = "Dodecahedron" ;
			break ;
		case 1:
			$platonicSolidType = "Icosahedron" ;
			break ;
		case 2:
			$platonicSolidType = "Octahedron" ;
			break ;
		case 3:
			$platonicSolidType = "Tetrahedron" ;
			break ;
	}
	// query for one of the value from the scale & 
	// adjust the other value proportionatly
	float $radius;
	$radius = `floatSliderGrp -query -value polyPrimitivePlatonicSolidRadius` ;
	setRadiusCallback($radius) ;
}

