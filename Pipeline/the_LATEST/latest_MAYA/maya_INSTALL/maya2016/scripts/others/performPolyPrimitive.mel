//$name contains the name of platonic solid or soccer ball
global string $platonicSolidName;
//$type contains the type of platonic solid or 0 for soccer ball
global string $platonicSolidType;
//Ratios of length to radius
global float $soccerBallRatio   = 0.4036;
global float $dodecahedronRatio = 0.7137;
global float $icosahedronRatio  = 1.0515;
global float $octahedronRatio   = 1.4143;
global float $tetrahedronRatio  = 1.7321;

proc ovar (string $name, int $defval, int $fs) {
	if ($fs || !`optionVar -exists $name`)
		optionVar -intValue $name $defval;
}

proc ofvar (string $name, float $defval, int $fs) {
	if ($fs || !`optionVar -exists $name`)
		optionVar -floatValue $name $defval;
}

proc orvar (string $name, int $val, int $fs) {
	if ($fs || !`optionVar -exists $name`)
		optionVar -intValue $name $val;
}

proc setOptionVars (int $fs, string $op)
{
	string $ovb=("polyPrimitive"+$op);
	string $ov;
	if ($op == "Sphere") {
		ovar(($ovb+"SX"), 20, $fs);
		ovar(($ovb+"SY"), 20, $fs);
		ofvar(($ovb+"Radius"), 1., $fs);
		orvar(($ovb+"Axis"), 2, $fs);	// Y axis
		orvar(($ovb+"UVType"), 2, $fs);		
		ovar(($ovb+"CreateUVs"), 1, $fs);	
	} else if ($op == "Cube") {
		ovar(($ovb+"SX"), 1, $fs);
		ovar(($ovb+"SY"), 1, $fs);
		ovar(($ovb+"SZ"), 1, $fs);
		ofvar(($ovb+"Width"), 1., $fs);
		ofvar(($ovb+"Height"), 1., $fs);
		ofvar(($ovb+"Depth"), 1., $fs);
		orvar(($ovb+"Axis"), 2, $fs);	// Y axis
		ovar(($ovb+"CreateUVs"), 1, $fs);	
		ovar(($ovb+"Normalize"), 1, $fs);
		orvar(($ovb+"NormalizeType"), 1, $fs);		
		ovar(($ovb+"PreserveAspectRatio"), 1, $fs);
	} else if ($op == "Cone" || $op == "Cylinder") {
		ofvar(($ovb+"Radius"), 1.0, $fs);
		ofvar(($ovb+"Height"), 2.0, $fs);
		ovar(($ovb+"SX"), 20, $fs);
		ovar(($ovb+"SY"), 1, $fs);
		ovar(($ovb+"CreateUVs"), 1, $fs);	
		ovar(($ovb+"Normalize"), 1, $fs);
		ovar(($ovb+"PreserveAspectRatio"), 1, $fs);
		if ($op == "Cone")
 			ovar(($ovb+"SZ"), 0, $fs);
 		else ovar(($ovb+"SZ"), 1, $fs);
		orvar(($ovb+"Axis"), 2, $fs);	// Y axis
		ovar(($ovb+"RoundCap"), 0, $fs);
	} else if ($op=="Plane") {
		ovar(($ovb+"SX"), 10, $fs);
		ovar(($ovb+"SY"), 10, $fs);
		ofvar(($ovb+"Width"), 1., $fs);
		ofvar(($ovb+"Height"), 1., $fs);
		orvar(($ovb+"Axis"), 2, $fs);	// Y axis
		ovar(($ovb+"CreateUVs"), 1, $fs);	
		ovar(($ovb+"PreserveAspectRatio"), 1, $fs);
	} else if ($op == "Torus") {
		ofvar(($ovb+"Radius"), 1.0, $fs);
		ofvar(($ovb+"SectionRadius"), .50, $fs);
		ofvar(($ovb+"Twist"), .0, $fs);
		ovar(($ovb+"SX"), 20, $fs);
		ovar(($ovb+"SY"), 20, $fs);
		ovar(($ovb+"CreateUVs"), 1, $fs);	
		orvar(($ovb+"Axis"), 2, $fs); 	// Y axis
	} else if ($op == "Prism") {
		ofvar(($ovb+"Length"), 2.0, $fs);
		ofvar(($ovb+"SideLength"), 1.0, $fs);
		ovar(($ovb+"NS"), 3, $fs);
		ovar(($ovb+"SH"), 1, $fs);
		ovar(($ovb+"SC"), 0, $fs);
		orvar(($ovb+"Axis"), 2, $fs); 	// Y axis
		ovar(($ovb+"CreateUVs"), 1, $fs);	
		ovar(($ovb+"Normalize"), 1, $fs);
		ovar(($ovb+"PreserveAspectRatio"), 1, $fs);
	} else if ($op == "Pyramid") {
		ofvar(($ovb+"SideLength"), 1.0, $fs);
		ovar(($ovb+"NS"), 2, $fs); // default sides = 4
		ovar(($ovb+"SH"), 1, $fs);
		ovar(($ovb+"SC"), 0, $fs);
		orvar(($ovb+"Axis"), 2, $fs); 	// Y axis
		ovar(($ovb+"CreateUVs"), 1, $fs);	
		ovar(($ovb+"Normalize"), 1, $fs);
		ovar(($ovb+"PreserveAspectRatio"), 1, $fs);
	} else if ($op == "Pipe") {
		ofvar(($ovb+"Radius"), 1.0, $fs);
		ofvar(($ovb+"Height"), 2.0, $fs);
		ofvar(($ovb+"Thickness"), 0.5, $fs);
		ovar(($ovb+"SA"), 20, $fs);
		ovar(($ovb+"SH"), 1, $fs);
		ovar(($ovb+"SC"), 0, $fs);
		ovar(($ovb+"CreateUVs"), 1, $fs);	
		orvar(($ovb+"Axis"), 2, $fs); 	// Y axis		
		ovar(($ovb+"RoundCap"), 0, $fs);
	} else if ($op == "Helix") {
		ofvar(($ovb+"Coils"), 3, $fs);
		ofvar(($ovb+"Height"), 2.0, $fs);
		ofvar(($ovb+"Width"), 2.0, $fs);
		ofvar(($ovb+"Radius"), 0.4, $fs);
		ovar(($ovb+"SA"), 8, $fs);
		ovar(($ovb+"SCO"), 50, $fs);
		ovar(($ovb+"SC"), 0, $fs);
		ovar(($ovb+"Direction"), 1, $fs);
		orvar(($ovb+"Axis"), 2, $fs); 	// Y axis
		ovar(($ovb+"CreateUVs"), 1, $fs);	
		ovar(($ovb+"Normalize"), 1, $fs);
		ovar(($ovb+"PreserveAspectRatio"), 1, $fs);
		ovar(($ovb+"RoundCap"), 0, $fs);
	} else if ($op == "PlatonicSolid") {
		ofvar(($ovb+"Radius"), 1.0, $fs);
		ofvar(($ovb+"SideLength"), 0.7137, $fs);
		orvar(($ovb+"Axis"), 2, $fs);
		orvar(($ovb+"SolidType"), 0, $fs);
		ovar(($ovb+"CreateUVs"), 1, $fs);
		ovar(($ovb+"Normalize"), 1, $fs);
		orvar(($ovb+"NormalizeType"), 1, $fs);		
		ovar(($ovb+"PreserveAspectRatio"), 1, $fs);
	} else if ($op == "Misc") {
		ofvar(($ovb+"Radius"), 1.0, $fs);
		ofvar(($ovb+"SideLength"), 0.4036, $fs);	
		orvar(($ovb+"Axis"), 2, $fs);
		ovar(($ovb+"CreateUVs"), 1, $fs);
		ovar(($ovb+"Normalize"), 1, $fs);
		orvar(($ovb+"NormalizeType"), 1, $fs);		
		ovar(($ovb+"PreserveAspectRatio"), 1, $fs);
	}

	if ($op != "Helix" && $op != "Prism") {
		ovar(($ovb+"Texture"), 1, $fs);
	}
}

proc oset (string $var) {	
	int $ival = `optionVar -query $var`;
    intSliderGrp -edit -value $ival $var;
}

global proc updatePlatonicSolidType()
{
	global string $platonicSolidName;
    global string $platonicSolidType;
	if($platonicSolidName == "polyPrimitiveMisc" ) {
		$platonicSolidType = "SoccerBall" ;
		return ;
	}
	string $var = $platonicSolidName + "SolidType";	
	int $val = (`optionMenuGrp -query -sl $var`) - 1;

	if( $val == 0 )
		$platonicSolidType = "Dodecahedron";
	if( $val == 1 )
		$platonicSolidType = "Icosahedron";
	if( $val == 2 )
		$platonicSolidType = "Octahedron";
	if( $val == 3 )
		$platonicSolidType = "Tetrahedron";
}

global proc setRadiusCallback(float $value) {
    global string $platonicSolidName;
    global string $platonicSolidType;
    global float  $soccerBallRatio;
    global float  $dodecahedronRatio;
    global float  $icosahedronRatio;
    global float  $octahedronRatio;
    global float  $tetrahedronRatio;
           float  $length;
	
	updatePlatonicSolidType();

    if ($platonicSolidType == "SoccerBall") {
        $length = $value*$soccerBallRatio;
    } else if ($platonicSolidType == "Dodecahedron") {
        $length = $value*$dodecahedronRatio;
    } else if($platonicSolidType == "Icosahedron") {
        $length = $value*$icosahedronRatio;
    } else if($platonicSolidType == "Octahedron") {
        $length = $value*$octahedronRatio;
    } else if($platonicSolidType == "Tetrahedron") {
        $length = $value*$tetrahedronRatio;
    }
	
    //Set edge length
    string $lengthSlider = $platonicSolidName + "SideLength";
	optionVar -fv $lengthSlider $length;
    floatSliderGrp -edit -value $length $lengthSlider;
}

proc setRadius(string $var1, string $var2, string $var3) {
    global string $platonicSolidName;
    global string $platonicSolidType;
    $value = `optionVar -query $var1`;
    $platonicSolidName  = $var2;
    $platonicSolidType  = $var3;	
	
	updatePlatonicSolidType();

    floatSliderGrp -edit -value $value -dc "setRadiusCallback \"#1\"" -cc "setRadiusCallback \"#1\"" $var1;
}

global proc setEdgeCallback(float $value) {
    global string $platonicSolidName;
    global string $platonicSolidType;
    global float  $soccerBallRatio;
    global float  $dodecahedronRatio;
    global float  $icosahedronRatio;
    global float  $octahedronRatio;
    global float  $tetrahedronRatio;
           float  $radius;

	updatePlatonicSolidType();

    if ($platonicSolidType == "SoccerBall") {
        $radius = $value/$soccerBallRatio;
    } else if ($platonicSolidType == "Dodecahedron") {
        $radius = $value/$dodecahedronRatio;
    } else if($platonicSolidType == "Icosahedron") {
        $radius = $value/$icosahedronRatio;
    } else if($platonicSolidType == "Octahedron") {
        $radius = $value/$octahedronRatio;
    } else if($platonicSolidType == "Tetrahedron") {
        $radius = $value/$tetrahedronRatio;
    }
    //Set radius
    string $radiusSlider = $platonicSolidName + "Radius";
    optionVar -fv $radiusSlider $radius;
    floatSliderGrp -edit -value $radius $radiusSlider;
}

proc setEdge(string $var1, string $var2, string $var3) {
    global string $platonicSolidName;
    global string $platonicSolidType;
    $value = `optionVar -query $var1`;
    $platonicSolidName  = $var2;
    $platonicSolidType  = $var3;
	
	updatePlatonicSolidType();

    floatSliderGrp -edit -value $value -dc "setEdgeCallback \"#1\"" -cc "setEdgeCallback \"#1\"" $var1;
}

