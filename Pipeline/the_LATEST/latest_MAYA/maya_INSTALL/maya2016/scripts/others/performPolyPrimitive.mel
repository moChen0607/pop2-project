global proc performPolyPrimitiveCallback (string $op, string $parent, int $doIt)
{
	setParent $parent;
	string $ovb=("polyPrimitive"+$op);
	if ($op == "Sphere") {
		ofcallback(($ovb+"Radius"));
		ocallback(($ovb+"SX"));
		ocallback(($ovb+"SY"));
		orcallback(($ovb+"Axis"));
		occallback(($ovb + "CreateUVs"));
		orcallback(($ovb+"UVType"));
