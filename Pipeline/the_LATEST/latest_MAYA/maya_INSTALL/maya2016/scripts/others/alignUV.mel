global proc alignUV(int $doU, int $minU, 
					int $doV, int $minV)
{
	string $selectedItems[];
	$selectedItems = `filterExpand -ex false -sm 35`;
	
	if (size($selectedItems) == 0)
		return;
	
	float $uvMin[2];
	float $uvMax[2];
	
	float $uvBox[] = `polyEvaluate -bc2`;
	$uvMin[0] = $uvBox[0];
	$uvMin[1] = $uvBox[2];
	$uvMax[0] = $uvBox[1];
	$uvMax[1] = $uvBox[3];
	
	string $cmd = "polyEditUV -r off ";

	if ($doU != 0)
	{
		if ($minU == 1) 
			$cmd = $cmd + ("-u " + $uvMin[0]);
		else
			$cmd = $cmd + ("-u " + $uvMax[0]);
	}
	
	if ($doV != 0)
	{
		if ($minV == 1)
			$cmd = $cmd + ("-v " + $uvMin[1]);
		else
			$cmd = $cmd + ("-v " + $uvMax[1]);
	}

	evalEcho ($cmd);
}


