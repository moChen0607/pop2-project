proc setOptionVars (int $forceFactorySettings)
{
	// Clip name
	//
	if ($forceFactorySettings || !`optionVar -exists constrClipName`) {
		optionVar -stringValue constrClipName "constraint1";
	}	

	if ($forceFactorySettings || !`optionVar -exists constrClipSchedule`) {
		optionVar -intValue constrClipSchedule 1;
	}	

	if ($forceFactorySettings || !`optionVar -exists constrClipSubChar`) {
		optionVar -intValue constrClipSubChar 1;
	}	

	if( $forceFactorySettings || !`optionVar -exists constrClipStart` ) {
		optionVar -floatValue constrClipStart 0;
	} 
	
	if( $forceFactorySettings || !`optionVar -exists constrClipEnd` ) {
		optionVar -floatValue constrClipEnd 10;
	} 
	
	//	constrClipTimeWarp
	// 	0: No Warp Curve Created
	//	1: Time Warp Curve Created
	//
	if ( $forceFactorySettings || !`optionVar -exists constrClipTimeWarp`) {
		optionVar -intValue constrClipTimeWarp 0;
	}

	//	constrClipRangeMethodWhich:
	//	1: set the clip for the selected range
	//	2: set the clip for the time slider range
	//	3: set the clip for the specified start and end times (default)
	//
	if ( $forceFactorySettings || !`optionVar -exists constrClipRangeMethodWhich`) {
		optionVar -intValue constrClipRangeMethodWhich 2;
	}

	if ($forceFactorySettings || !`optionVar -exists constrClipHierarchy`) {
		// use hierarchy: default is true
		optionVar -intValue constrClipHierarchy 1;
	}
}

//
//  Procedure Name:
//      constrClipSetup
//
//  Description:
//		Update the state of the option box UI to reflect the option values.
//
//  Input Arguments:
//      parent               - Top level parent layout of the option box UI.
//                             Required so that UI object names can be 
//                             successfully resolved.
//
//	forceFactorySettings     - Whether the option values should be set to
//                             default values.
//
//  Return Value:
//      None.
//
global proc constrClipSetup (string $parent, int $forceFactorySettings)
{
	// Retrieve the option settings.
	setOptionVars( $forceFactorySettings );

	setParent $parent;
	
	// Set the clip name.
	string $name = `optionVar -query constrClipName`;
	textFieldGrp -e -text $name clipNameWidget;

	// Set the schedule flag
	int $scheduleIt = `optionVar -query constrClipSchedule`;

	// Set the subcharacter flag
	int $useSubcharacters = `optionVar -query constrClipSubChar`;
	checkBoxGrp -edit -value1 $useSubcharacters useSubCharWidget;

	switch ($scheduleIt) {
	case 1:
			radioButtonGrp -e -sl 1 scheduleMethod;
			break;
	default:
	case 2:
	case 3:			
			radioButtonGrp -e -sl 1 moveToLibraryMethod;
			break;
	}
	
	// 1 == Remove character's existing constraints & add clip to track editor
	// 2 == Remove character's existing constraints and add clip to library
    // 3 == Keep existing constraints and add clip to library
	//
	if ($scheduleIt == 3) {
		checkBoxGrp -edit -value1 true leaveKeysWidget;
		radioButtonGrp -e -enable false scheduleMethod;
	} else {
		radioButtonGrp -e -enable true scheduleMethod;		
		checkBoxGrp -edit -value1 false leaveKeysWidget;		
	}

	//	Set the start and end times.
	float $start = `optionVar -query constrClipStart`;
	float $end   = `optionVar -query constrClipEnd`;
	floatFieldGrp -edit -value1 $start -enable false frameStartValue;
	floatFieldGrp -edit -value1 $end -enable false frameEndValue;	

    // Set the correct radio button.
	int $whichMethod = `optionVar -query constrClipRangeMethodWhich`;
	switch($whichMethod) {
		case 1:
			radioButtonGrp -e -sl 1 selectedMethod;
			break;
		case 2:
			radioButtonGrp -e -sl 1 timeSliderMethod;
			break;
		case 3:
		default:
			radioButtonGrp -e -sl 1 startEndMethod;
			floatFieldGrp -e -enable true frameStartValue;
			floatFieldGrp -e -enable true frameEndValue;
			break;
	}

	// Set the correct warp curve radio button.
	//
	int $whichWarp = `optionVar -query constrClipTimeWarp`;
	checkBoxGrp -edit -value1 $whichWarp createTimeWarpGrp;

	checkBoxGrp -edit -value1 `optionVar -query constrClipHierarchy` clipHierWidget;
}

//
//  Procedure Name:
//      constrClipCallback
//
//  Description:
//		Update the option values with the current state of the option box UI.
//
//  Input Arguments:
//      parent - Top level parent layout of the option box UI.  Required so
//               that UI object names can be successfully resolved.
//
//	doIt       - Whether the command should execute.
//
//  Return Value:
//      None.
//
global proc constrClipCallback (string $parent, int $doIt)
{
    setParent $parent;

	// Name
	//
	optionVar -stringValue constrClipName
		`textFieldGrp -q -text clipNameWidget`;

	// Set the schedule flag
	int $leaveKeys = `checkBoxGrp -query -value1 leaveKeysWidget`;	

	int $useSubChar = `checkBoxGrp -query -value1 useSubCharWidget`;	
	optionVar -intValue constrClipSubChar $useSubChar;

	// if the user selects leaveKeys, dim the scheduleMethod widget, since
	// we only allow you add add the clip to the library if you leave the
	// keys
	//
	if ($leaveKeys) {
		optionVar -intValue constrClipSchedule 3;
		radioButtonGrp -e -enable false scheduleMethod;
		radioButtonGrp -e -sl 1 moveToLibraryMethod;		
	} else {
		radioButtonGrp -e -enable true scheduleMethod;		
		if (`radioButtonGrp -q -sl scheduleMethod` == 1) {
			optionVar -intValue constrClipSchedule 1;
		} else if (`radioButtonGrp -q -sl moveToLibraryMethod` == 1) {
			optionVar -intValue constrClipSchedule 2;
		}
	}
	
	if (`radioButtonGrp -q -sl selectedMethod` == 1) {
		optionVar -intValue constrClipRangeMethodWhich 1;
	} else if (`radioButtonGrp -q -sl timeSliderMethod` == 1) {
		optionVar -intValue constrClipRangeMethodWhich 2;
	} else {
		optionVar -intValue constrClipRangeMethodWhich 3;
	}

    optionVar -floatValue  constrClipStart `floatFieldGrp -query -value1 frameStartValue`;
    optionVar -floatValue  constrClipEnd `floatFieldGrp -query -value1 frameEndValue`;

	int $warpOption = `checkBoxGrp -q -value1 createTimeWarpGrp`;
	optionVar -intValue constrClipTimeWarp $warpOption;

	optionVar -intValue constrClipHierarchy `checkBoxGrp -q -value1 clipHierWidget`;

	if ($doIt)
		performCreateConstraintClip false;
}


proc string constrClipWidgets( string $parent )
{
	setParent $parent;
	
	string $tabForm = `columnLayout -adj true`;

	textFieldGrp -label (uiRes("m_performCreateConstraintClip.kName"))  
	        -text (uiRes("m_performCreateConstraintClip.kClip1"))  -parent $tabForm
	        clipNameWidget;

	// schedule it
	checkBoxGrp
		-label (uiRes("m_performCreateConstraintClip.kKeys")) 
		-label1 (uiRes("m_performCreateConstraintClip.kLeaveKeysInTimeline")) 
		-annotation (uiRes("m_performCreateConstraintClip.kLeaveKeysInTimelineAnnot")) 
		-onc "radioButtonGrp -e -enable false scheduleMethod; radioButtonGrp -e -sl 1 moveToLibraryMethod;"
		-ofc "radioButtonGrp -e -enable true scheduleMethod;"
		-numberOfCheckBoxes 1
		leaveKeysWidget;
	
	// how to schedule it
	radioButtonGrp -numberOfRadioButtons 1
		-label (uiRes("m_performCreateConstraintClip.kClip")) 
		-label1 (uiRes("m_performCreateConstraintClip.kPutClipInVisorOnly")) 
		-annotation (uiRes("m_performCreateConstraintClip.kPutClipInVisorOnlyAnnot")) 
		moveToLibraryMethod;

	radioButtonGrp -numberOfRadioButtons 1
		-label1 (uiRes("m_performCreateConstraintClip.kPutClipInTraxEditorAndVisor")) 
		-annotation (uiRes("m_performCreateConstraintClip.kPutClipInTraxEditorAndVisorAnnot")) 		
		-shareCollection moveToLibraryMethod
		scheduleMethod;

	// clip start & duration
	radioButtonGrp -numberOfRadioButtons 1
		-label (uiRes("m_performCreateConstraintClip.kTimeRange")) 
		-label1 (uiRes("m_performCreateConstraintClip.kSelected")) 
		-annotation (uiRes("m_performCreateConstraintClip.kSelectedAnnot")) 
		selectedMethod;

	radioButtonGrp -numberOfRadioButtons 1
		-label1 (localizedUIComponentLabel("Time Slider"))
		-annotation (uiRes("m_performCreateConstraintClip.kTimeSliderAnnot")) 
		-shareCollection selectedMethod
		timeSliderMethod;

	radioButtonGrp -numberOfRadioButtons 1
		-label1 (uiRes("m_performCreateConstraintClip.kStartEnd")) 
		-annotation (uiRes("m_performCreateConstraintClip.kStartEndAnnot")) 
		-select 1
		-shareCollection selectedMethod
		-onCommand "floatFieldGrp -e -enable true frameStartValue; floatFieldGrp -e -enable true frameEndValue;"
		-offCommand "floatFieldGrp -e -enable false frameStartValue; floatFieldGrp -e -enable false frameEndValue;"
		startEndMethod;

	frameLayout -bv no -lv no -collapsable no startEndFrame;
		columnLayout -adjustableColumn true;
		floatFieldGrp -label (uiRes("m_performCreateConstraintClip.kStartTime"))  -value1 0.0 frameStartValue;
		floatFieldGrp -label (uiRes("m_performCreateConstraintClip.kEndTime"))  -value1 10.0 frameEndValue;
		setParent ..;
		setParent ..;
	setParent ..;
	
	// whether to include subcharacters in the clip
	checkBoxGrp
		-label (uiRes("m_performCreateConstraintClip.kSubcharacters")) 
		-label1 (uiRes("m_performCreateConstraintClip.kIncludeSubcharactersInClip")) 
		-annotation (uiRes("m_performCreateConstraintClip.kSubcharactersAnnot")) 
		-numberOfCheckBoxes 1
		useSubCharWidget;

	// clip time warps
	checkBoxGrp
		-label (uiRes("m_performCreateConstraintClip.kTimeWarp")) 
		-label1 (uiRes("m_performCreateConstraintClip.kCreateTimeWarpCurve")) 
		-annotation (uiRes("m_performCreateConstraintClip.kTimeWarpAnnot")) 
		-numberOfCheckBoxes 1
		createTimeWarpGrp;

	separator;

	checkBoxGrp
		-label (uiRes("m_performCreateConstraintClip.kInclude")) 
		-label1 (uiRes("m_performCreateConstraintClip.kHierarchy")) 
		-annotation (uiRes("m_performCreateConstraintClip.kHierarchyAnnot")) 
		-numberOfCheckBoxes 1
		clipHierWidget;

	return $tabForm;
}

global proc constrClipOptions ()
{
	string $commandName = "constrClip";

	string $applyTitle = "Create";
	
	// Build the option box "methods"
	//
	string $callback = ($commandName + "Callback");
	string $setup = ($commandName + "Setup");

	//	Get the option box.
	//
	//  The value returned is the name of the layout to be used as
	//	the parent for the option box UI.
	//
	string $layout = getOptionBox();
	setParent $layout;

	setOptionBoxCommandName("clip");

	setUITemplate -pushTemplate DefaultTemplate;
	waitCursor -state 1;
	tabLayout -scr true -tv false;	// To get the scroll bars

	string $parent = `columnLayout -adjustableColumn 1`;

	constrClipWidgets $parent;

	waitCursor -state 0;
	setUITemplate -popTemplate;

	//	'Apply' button.
	//
	string $applyBtn = getOptionBoxApplyBtn();
	button -edit
		-label (uiRes("m_performCreateConstraintClip.kCreateClip")) 
		-command ($callback + " " + $parent + " " + 1)
		$applyBtn;

	//	'Save' button.
	//
	string $saveBtn = getOptionBoxSaveBtn();
	button -edit 
		-command ($callback + " " + $parent + " " + 0 + "; hideOptionBox")
		$saveBtn;

	//	'Reset' button.
	//
	string $resetBtn = getOptionBoxResetBtn();
	button -edit 
		-command ($setup + " " + $parent + " " + 1)
		$resetBtn;

	//	Set the option box title.
	//
	setOptionBoxTitle (uiRes("m_performCreateConstraintClip.kCreateConstraintClipOptions"));

	//	Customize the 'Help' menu item text.
	//
	setOptionBoxHelpTag( "CreateConstraintClip" );

	//	Set the current values of the option box.
	//
	eval (($setup + " " + $parent + " " + 0));	
	
	//	Show the option box.
	//
	showOptionBox();
}


//
//  Procedure Name:
//      assembleCmd
//
//  Description:
//		Construct the command that will apply the option box values.
//
//  Input Arguments:
//      None.
//
//  Return Value:
//      None.
//
proc string assembleCmd()
{
	string $cmd;

	setOptionVars(false);

	// get the partition name
	string $clipName = "clip1";
	if (`optionVar -exists constrClipName`) {
		$clipName = `optionVar -query constrClipName`;
	}

	int $scheduleIt = 1;
	if (`optionVar -exists constrClipSchedule`) {
		$scheduleIt = `optionVar -query constrClipSchedule`;
	}

	int $useSubChar = 1;
	if (`optionVar -exists constrClipSubChar`) {
		$useSubChar = `optionVar -query constrClipSubChar`;
	}

	string $createMethod = "startEndMethod";
	int $whichMethod = `optionVar -q constrClipRangeMethodWhich`;
	switch ($whichMethod) {
		case 1:
			$createMethod = "selectedMethod";
			break;
		case 2:
			$createMethod = "timeSliderMethod";
			break;
	}

	string $warpMethod = "noWarp";
	int $timeWarp = `optionVar -q constrClipTimeWarp`;
	if ($timeWarp > 0) {
		$warpMethod = "enabledWarp";
	}

	int $useHierarchy = 0;
	if (`optionVar -exists constrClipHierarchy`) {
		$useHierarchy = `optionVar -query constrClipHierarchy`;
	}

	// doCreateClipArgList takes a string array 
	//
	$cmd =	"doCreateClipArgList 5 { " +
				"\"" + $clipName + "\"" +
				",\"" + $scheduleIt + "\"" +		
				",\"" + $createMethod + "\"" +
				",\"" + `optionVar -query constrClipStart` + "\"" +
				",\"" + `optionVar -query constrClipEnd` + "\"" +
				",\"" + $useSubChar + "\"" +
				",\"" + $warpMethod + "\"" +
				",\"" + $useHierarchy + "\"" +
				",\"constraint\"" +
			" };";

	return $cmd;
}

//
//  Procedure Name:
//      performCreateConstraintClip
//
//  Description:
//		Create a clip and add the constrained attributes from the 
//      selected nodes.  This procedure will also show the option box
//		window if necessary as well as construct the command string
//		that will create a clip with the current option box values.
//
//  Input Arguments:
//      0 - Execute the command.
//      1 - Show the option box dialog.
//      2 - Return the command.
//
//  Return Value:
//      None.
//
global proc string performCreateConstraintClip (int $action)
{
	string $cmd = "";

	switch ($action) {

		//	Execute the command.
		//
		case 0:
			//	Retrieve the option settings
			//
			setOptionVars(false);

			//	Get the command.
			//
			$cmd = `assembleCmd`;

			//	Execute the command with the option settings.
			//
			if ($cmd != "")
			    eval($cmd);
			break;

		//	Show the option box.
		//
		case 1:
			constrClipOptions;
			break;
		case 2:
			//	Get the command.
			//
			$cmd = `assembleCmd`;
	}
	return $cmd;
}

