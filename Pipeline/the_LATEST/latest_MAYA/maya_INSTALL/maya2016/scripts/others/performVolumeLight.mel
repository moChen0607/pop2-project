		optionVar -intValue volumeLightShadows false;
	}

	//	Shadow Color.
	//
	if ($forceFactorySettings || !`optionVar -exists volumeLightShadowColor`) {
		optionVar -floatValue volumeLightShadowColor 0
			-floatValueAppend volumeLightShadowColor 0
			-floatValueAppend volumeLightShadowColor 0;
	}

