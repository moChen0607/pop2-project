// 	}
	
	//	Shadows.
	//
	if (`checkBoxGrp -exists volumeLightShadows`) {
		checkBoxGrp -edit
			-value1 `optionVar -query volumeLightShadows` 
			volumeLightShadows;
	}

	//	Shadow Color.
	//
	if (`colorSliderGrp -exists volumeLightShadowColor`) {
		$rgb = `optionVar -query volumeLightShadowColor`;
		colorSliderGrp -edit 
			-rgb $rgb[0] $rgb[1] $rgb[2]
			volumeLightShadowColor;
	}

// 	//	Depth Map Filter Size.
// 	//
// 	if (`intSliderGrp -exists volumeLightDepthMapFilterSize`) {
// 		intSliderGrp -edit 
// 			-value `optionVar -query volumeLightDepthMapFilterSize`
// 			volumeLightDepthMapFilterSize;
// 	}

// 	//	Depth Map Resolution.
// 	//
// 	if (`intSliderGrp -exists volumeLightDepthMapResolution`) {
// 		intSliderGrp -edit 
// 			-value `optionVar -query volumeLightDepthMapResolution`
// 			volumeLightDepthMapResolution;
// 	}

// 	//	Depth Map Bias.
// 	//
// 	if (`intSliderGrp -exists volumeLightDepthMapBias`) {
// 		intSliderGrp -edit 
// 			-value `optionVar -query volumeLightDepthMapBias`
// 			volumeLightDepthMapBias;
// 	}

// 	//	Vol Shadow Samples.
// 	//
// 	if (`intSliderGrp -exists volumeLightVolShadowSamples`) {
