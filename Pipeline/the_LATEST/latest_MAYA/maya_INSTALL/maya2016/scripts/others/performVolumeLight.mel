// 		optionVar -intValue volumeLightDepthMapFilterSize 1;
// 	}

// 	//	Depth Map Resolution.
// 	//
// 	if ($forceFactorySettings || !`optionVar -exists volumeLightDepthMapResolution`) {
// 		optionVar -intValue volumeLightDepthMapResolution 512;
// 	}

// 	//	Depth Map Bias.
// 	//
