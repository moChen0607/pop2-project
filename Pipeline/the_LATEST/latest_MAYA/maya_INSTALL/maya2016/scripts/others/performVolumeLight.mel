	//
	if ($forceFactorySettings || !`optionVar -exists volumeLightIntensity`) {
		optionVar -floatValue volumeLightIntensity 1;
	}

	//	Color.
	//
	if ($forceFactorySettings || !`optionVar -exists volumeLightColor`) {
		optionVar -floatValue volumeLightColor 1
			-floatValueAppend volumeLightColor 1
			-floatValueAppend volumeLightColor 1;
	}

	//	Exclusive.
	//
// 	if ($forceFactorySettings || !`optionVar -exists volumeLightExclusive`) {
// 		optionVar -intValue volumeLightExclusive false;
// 	}

	//	Shadows.
	//
