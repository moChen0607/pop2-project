//
//  Description:
//      This script creates the DG Traversal menu items.
//

global proc createTraversalMenuItems(string $parent, string $item)
//
// Creates a menu on the toolbar that shows both the inputs and the outputs
// and allows dg traversal.
//
{
	// Delete all menu entries currently in the popup
	//
	popupMenu -e -dai $parent;
	setParent -menu $parent;

	string $format = (uiRes("m_createTraversalMenuItems.kSelectNode"));
	string $label = `format -stringArg $item $format`;
	menuItem -c ("select -r " + $item ) -label $label;
	
	// Add container selection if applicable
	//
	string $container = `container -q -fc $item`;
	if( $container != "" ){
		$label = `format -stringArg $container $format`;
		menuItem -c ("select -r " + $container) -label $label;
	}
	// Show history & future
	//
	dgHistoryPopupFill( $item, false );
	dgHistoryPopupFill( $item, true );
}
