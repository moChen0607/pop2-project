//
//  Procedure Name:
//      fileTexturePlacementConnect
//
//  Description:
//	Make specific connections from a file texture to a placement.
//
//  Inputs:
//		$node - the name of a file texture
//		$place2d - the name of a place2dTexture
//		Procedure to popup the render creation window.
//
//  Return Value:
//      None.
//
//////////////////////////////////////////////////////////////////////

proc runTheEval( string $cmd, int $echo )
{
	if ( $echo )
		evalEcho $cmd;
	else
		eval $cmd;
}

proc connectNodeToFileTexturePlacement (string $node, string $place2d, int $echo )
{
	string $typeNode, $typePlace;
	$typeNode = `nodeType $node`;
	$typePlace = `nodeType $place2d`;

	// "file" as well as "psdFile" nodes need place2d texture connections.
	if( ($typeNode == "file" || $typeNode == "psdFileTex") && $typePlace == "place2dTexture") {
		string $cmd = ("connectAttr -f " + $place2d + ".coverage " + $node + ".coverage");
		runTheEval $cmd $echo;
	
		$cmd = ("connectAttr -f " + $place2d + ".translateFrame " + $node + ".translateFrame");
		runTheEval $cmd $echo;

		$cmd = ("connectAttr -f " + $place2d + ".rotateFrame " + $node + ".rotateFrame");
		runTheEval $cmd $echo;
	
		$cmd = ("connectAttr -f " + $place2d + ".mirrorU " + $node + ".mirrorU");
		runTheEval $cmd $echo;

		$cmd = ("connectAttr -f " + $place2d + ".mirrorV " + $node + ".mirrorV");
		runTheEval $cmd $echo;

		$cmd = ("connectAttr -f " + $place2d + ".stagger " + $node + ".stagger");
		runTheEval $cmd $echo;

		$cmd = ("connectAttr -f " + $place2d + ".wrapU " + $node + ".wrapU");
		runTheEval $cmd $echo;

		$cmd = ("connectAttr -f " + $place2d + ".wrapV " + $node + ".wrapV");
		runTheEval $cmd $echo;

		$cmd = ("connectAttr -f " + $place2d + ".repeatUV " + $node + ".repeatUV");
		runTheEval $cmd $echo;

		$cmd = ("connectAttr -f " + $place2d + ".offset " + $node + ".offset");
		runTheEval $cmd $echo;

		$cmd = ("connectAttr -f " + $place2d + ".rotateUV " + $node + ".rotateUV");
		runTheEval $cmd $echo;

		$cmd = ("connectAttr -f " + $place2d + ".noiseUV " + $node + ".noiseUV");
		runTheEval $cmd $echo;

		$cmd = ("connectAttr -f " + $place2d + ".vertexUvOne " + $node + ".vertexUvOne");
		runTheEval $cmd $echo;

		$cmd = ("connectAttr -f " + $place2d + ".vertexUvTwo " + $node + ".vertexUvTwo");
		runTheEval $cmd $echo;

		$cmd = ("connectAttr -f " + $place2d + ".vertexUvThree " + $node + ".vertexUvThree");
		runTheEval $cmd $echo;

		$cmd = ("connectAttr -f " + $place2d + ".vertexCameraOne " + $node + ".vertexCameraOne");
		runTheEval $cmd $echo;

	}
}

global proc	fileTexturePlacementConnect (string $node, string $place2d)
{
	// This calls will do an evalEcho for each command
	connectNodeToFileTexturePlacement( $node, $place2d, true );
}

global proc	fileTexturePlacementConnectNoEcho (string $node, string $place2d)
{
	// This call will not echo the commands
	connectNodeToFileTexturePlacement( $node, $place2d, false );
}