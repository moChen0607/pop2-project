//
//  Procedure Name:
//	AEmembraneemplate
//
//  Description Name;
//	Creates the attribute editor controls for the membrane Node
//
//  Input Value:
//	nodeName 
//
//  Output Value:
//	None
// 

global proc AEmembraneUpdatePressure( string $nodeName )
{
	float $pm = getAttr($nodeName + ".pressureMethod");
	editorTemplate -dimControl $nodeName "pressure" ($pm != 0);
	editorTemplate -dimControl $nodeName "incompressibility" ($pm == 0);
	editorTemplate -dimControl $nodeName "pumpRate" ($pm == 0);
	editorTemplate -dimControl $nodeName "airTightness" ($pm == 0);
	editorTemplate -dimControl $nodeName "startPressure" ($pm == 0);
}

//
//=========================================================
//  Procedure Name: AEmembraneTemplate
//
global proc AEmembraneTemplate ( string $nodeName )
{
	editorTemplate -beginScrollLayout;
		editorTemplate -beginNoOptimize;	
		editorTemplate -label (uiRes("m_AEmembraneTemplate.kEnable"))  -addControl "enable";
		editorTemplate -beginLayout (uiRes("m_AEmembraneTemplate.kForces"))  -collapse 0;
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kSpaceScale"))  -addControl "spaceScale";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kGravity"))  -addControl "gravity";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kGravityDirection"))  -addControl "gravityDirection";
			editorTemplate -addSeparator;
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kWindSpeed"))  -addControl "windSpeed";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kWindDirection"))  -addControl "windDirection";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kLift"))  -addControl "lift";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kDrag"))  -addControl "drag";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kTangentialDrag"))  -addControl "tangentialDrag";
		editorTemplate -endLayout;
		editorTemplate -beginLayout (uiRes("m_AEmembraneTemplate.kCollisionProperties"))  -collapse 0;
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kCollide"))  -addControl "collide";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kSelfCollide"))  -addControl "selfCollide";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kSelfCollisionFlag"))  -addControl "selfCollisionFlag";
			editorTemplate -addSeparator;
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kThickness"))  -addControl "thickness";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kSelfCollideWidthScale"))  -addControl "selfCollideWidthScale";
			editorTemplate -addSeparator;
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kFriction"))  -addControl "friction";
			editorTemplate -addSeparator;			
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kPushOut"))  -addControl "pushOut";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kPushOutRadius"))  -addControl "pushOutRadius";
		editorTemplate -endLayout;
		editorTemplate -beginLayout (uiRes("m_AEmembraneTemplate.kDynamicProperties"))  -collapse 0;
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kStretchResistance"))  -addControl "stretchResistance";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kCompressionResistance"))  -addControl "compressionResistance";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kBendResistance"))  -addControl "bendResistance";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kBendAngleDropoff"))  -addControl "bendAngleDropoff";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kShearResistance"))  -addControl "shearResistance";
			editorTemplate -addSeparator;
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kRigidity"))  -addControl "rigidity";
			editorTemplate -addSeparator;
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kRestLengthScale"))  -addControl "restLengthScale";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kBendAngleScale"))  -addControl "bendAngleScale";
			editorTemplate -addSeparator;
		editorTemplate -endLayout;
		editorTemplate -beginLayout (uiRes("m_AEmembraneTemplate.kTurbulenceProperties"))  -collapse 1;
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kTurbulence"))  -addControl "turbulence";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kTurbulenceTime"))  -addControl "turbulenceTime";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kTurbulenceFrequency"))  -addControl "turbulenceFrequency";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kTurbulenceOffset"))  -addControl "turbulenceOffset";
		editorTemplate -endLayout;
		editorTemplate -beginLayout (uiRes("m_AEmembraneTemplate.kPressureSettings"))  -collapse 1;
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kPressureMethod"))  -addControl "pressureMethod" "AEmembraneUpdatePressure";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kPressure"))  -addControl "pressure";
		editorTemplate -endLayout;
		editorTemplate -beginLayout (uiRes("m_AEmembraneTemplate.kQualitySettings"))  -collapse 1;
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kSteps"))  -addControl "steps";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kSubSteps"))  -addControl "subSteps";
			editorTemplate -label (uiRes("m_AEmembraneTemplate.kStepSize"))  -addControl "stepSize";
		editorTemplate -endLayout;
		editorTemplate -endNoOptimize;

		editorTemplate -addExtraControls;

	editorTemplate -endScrollLayout;
}
