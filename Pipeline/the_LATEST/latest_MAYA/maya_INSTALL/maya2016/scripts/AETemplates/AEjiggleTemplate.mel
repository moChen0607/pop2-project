//
//  Procedure Name:
//	AEsurfaceShaderTemplate
//
//  Description Name;
//	Creates the attribute editor controls for the surfaceShader Node
//
//  Input Value:
//	nodeName 
//
//  Output Value:
//	None
// 


global proc checkMotionMultiplier ( string $nodeName )
{
	string $nodeAttr = $nodeName + ".enable";
	if( `getAttr $nodeAttr` == 2 )
		editorTemplate -dimControl $nodeName "motionMultiplier" false;
	else
		editorTemplate -dimControl $nodeName "motionMultiplier" true;
}

global proc AEjiggleTemplate ( string $nodeName )
{
	editorTemplate -beginScrollLayout;
		editorTemplate -beginLayout (uiRes("m_AEjiggleTemplate.kJiggleAttributes"))  -collapse false;
			editorTemplate -addControl enable checkMotionMultiplier;
			editorTemplate -addControl stiffness;
			editorTemplate -addControl damping;
			editorTemplate -addControl jiggleWeight;
			editorTemplate -addControl forceAlongNormal;
			editorTemplate -addControl forceOnTangent;
			editorTemplate -addControl motionMultiplier;
			editorTemplate -addControl directionBias;
			editorTemplate -addControl ignoreTransform;
		editorTemplate -endLayout;
		editorTemplate -beginLayout (uiRes("m_AEjiggleTemplate.kDiskCacheAttributes"))  -collapse true;
			editorTemplate -addControl diskCache;
		editorTemplate -endLayout;
		AEweightGeometryFilterTemplate $nodeName;
	editorTemplate -addExtraControls;
	editorTemplate -endScrollLayout;
}
