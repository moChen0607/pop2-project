global proc updateLayerUI( )
//
//
// Creation Date:  8 November 1996
//
//
//  Procedure Name:
//      updateLayerUI
//
//  Description:
//		This script updates all layer UI whenever
//		the "layerPartitionModified" trigger is
//		fired (IE: a new layer has been created).
//
//  Input Arguments:
//      None.
//
//  Return Value:
//      None.
//
{

	string $allLayers[] = `listAllLayers`;

	for( $item in $allLayers )
	{
		string $layerName = $item;
		string $layerEntryName = ( $layerName + "LayerItem" ); 
		if( !`menuItem -exists $layerEntryName` )
		{
			menuItem -p layerPopup -l $layerName $layerEntryName;
		}
	}
	//
	// If layers were deleted, remove them from the layers
	// option menu.  Do not remove the 'Universe' item.
	//
	string $menuList[] = `optionMenu -q -ils layerPopup`;

	for( $layerMenuItem in $menuList )
	{
		string $layerName = `menuItem -q -l $layerMenuItem`;

		if( $layerName != "Universe" )
		{
			if( !`objExists $layerName` )
			{
				deleteUI ( $layerMenuItem );
			}
		}
	}	
	//	Make sure that the "states" for the layers
	//	are now in sync.
	//
	updateWorldViewEditors;
}
