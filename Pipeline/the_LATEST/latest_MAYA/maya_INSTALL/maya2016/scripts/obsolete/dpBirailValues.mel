//
//
//  Creation Date:  Oct 9 1996
//
//  Description:
//  This proc fills the dpBirail tool property sheet with values.
//
//  Input Arguments:
//      $toolName        - this is the name of the instance of the tool
//                        that the property sheet is modifying.
//
//  Return Value:
//      None.
//
//
//
//


global proc dpBirailValues( string $toolName )
//
//  Description:
//		Sets the state of the property sheet based on the values
//		in the tool context.
//
{	
	// set my top layout to be the current $parent
	//
	string $parent = (`toolPropertyWindow -q -location` + "|dpBirail");
	setParent $parent;

	birailCommonValues( $toolName, "twoProfiles", "dpBirailCtx" ) ;

	commonModellingValues($toolName, "dpBirailCtx" ) ;
	optionalCommonModellingValues( $toolName, "dpBirailCtx", 
						"outputPolygons", 
						"noOriginals" );

	// set property sheet label and icon
	//
	string $icon = "birail2Gen.xpm";
	string $help = "UserGuide/Modeling/ModelingNURBS/NURBSsurfaces.birail.doc1.html#188249";
	toolPropertySetCommon $toolName $icon $help;

	toolPropertySelect dpBirail;
}
