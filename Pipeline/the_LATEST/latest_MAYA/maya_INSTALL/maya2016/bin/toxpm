#!/bin/csh -f

if (-e $1.iff ) then
  imgcvt -f iff -t rgb $1.iff $1.rgb
  imconvert $1.rgb $1.xpm

  # Remove '$1.iff' from the following line to keep the source file.
  /bin/rm -f $1.rgb $1.iff
else
  echo -n "Cannot find file: "
  echo -n $1
  echo ".iff"
  echo "Usage: toxpm <file>"
  echo "       where <file> is the name of the file stripped of the manditory .iff extension"
endif

exit 1

